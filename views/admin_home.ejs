<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - SeaNergy</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary-color: #00d4ff;
      --primary-dark: #0099cc;
      --primary-light: #33ddff;
      --success: #2ed573;
      --warning: #ffa502;
      --danger: #ff4757;
      --sidebar-width: 280px;
    }

    /* Light Mode (Default) */
    body {
      --bg-primary: #f5f7fa;
      --bg-secondary: #ffffff;
      --bg-tertiary: #fafbfc;
      --bg-sidebar: linear-gradient(180deg, #1a1f3a 0%, #0a0e27 100%);
      --text-primary: #1a1f3a;
      --text-secondary: #6b7280;
      --text-tertiary: #9ca3af;
      --border-color: #e5e7eb;
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.05);
      --shadow-md: 0 4px 15px rgba(0, 0, 0, 0.08);
      --shadow-lg: 0 8px 30px rgba(0, 0, 0, 0.12);
      --card-bg: #ffffff;
    }

    /* Dark Mode */
    body.dark-mode {
      --bg-primary: #0a0e27;
      --bg-secondary: #1a1f3a;
      --bg-tertiary: #252b47;
      --bg-sidebar: linear-gradient(180deg, #0a0e27 0%, #1a1f3a 100%);
      --text-primary: #e0e0e0;
      --text-secondary: #a0a0a0;
      --text-tertiary: #707070;
      --border-color: #2d3548;
      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
      --shadow-md: 0 4px 15px rgba(0, 0, 0, 0.4);
      --shadow-lg: 0 8px 30px rgba(0, 0, 0, 0.5);
      --card-bg: #1a1f3a;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: var(--bg-primary);
      color: var(--text-primary);
      overflow-x: hidden;
      transition: background 0.3s ease, color 0.3s ease;
    }

    /* Particle Canvas */
    #particleCanvas {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      opacity: 0.3;
    }

    /* Tech Symbols - Only in Dark Mode */
    .tech-symbol {
      position: fixed;
      font-size: 40px;
      opacity: 0;
      pointer-events: none;
      animation: floatTech 15s ease-in-out infinite;
      filter: drop-shadow(0 0 10px var(--primary-color));
      transition: opacity 0.3s ease;
      z-index: 0;
    }

    body.dark-mode .tech-symbol {
      opacity: 0.15;
    }

    .tech-1 { top: 15%; left: 20%; animation-delay: 0s; }
    .tech-2 { top: 25%; right: 15%; animation-delay: 2s; }
    .tech-3 { bottom: 25%; left: 25%; animation-delay: 4s; }
    .tech-4 { bottom: 15%; right: 20%; animation-delay: 6s; }
    .tech-5 { top: 50%; left: 10%; animation-delay: 8s; }
    .tech-6 { top: 60%; right: 10%; animation-delay: 10s; }

    @keyframes floatTech {
      0%, 100% { 
        transform: translateY(0px) translateX(0px) rotate(0deg); 
      }
      25% { 
        transform: translateY(-30px) translateX(20px) rotate(10deg); 
      }
      50% { 
        transform: translateY(-15px) translateX(-20px) rotate(-10deg); 
      }
      75% { 
        transform: translateY(-25px) translateX(15px) rotate(5deg); 
      }
    }

    /* Theme Toggle Button */
    .theme-toggle {
      position: fixed;
      top: 25px;
      right: 25px;
      width: 50px;
      height: 50px;
      background: var(--card-bg);
      border: 2px solid var(--border-color);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      font-size: 24px;
      transition: all 0.3s ease;
      box-shadow: var(--shadow-md);
      z-index: 1001;
    }

    .theme-toggle:hover {
      transform: scale(1.1) rotate(15deg);
      box-shadow: var(--shadow-lg);
      border-color: var(--primary-color);
    }

    .theme-toggle:active {
      transform: scale(0.95);
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      left: 0;
      top: 0;
      width: var(--sidebar-width);
      height: 100vh;
      background: var(--bg-sidebar);
      padding: 30px 0;
      box-shadow: 4px 0 20px rgba(0, 212, 255, 0.2);
      z-index: 1000;
      transition: all 0.3s ease;
      overflow-y: auto;
    }

    .sidebar::-webkit-scrollbar {
      width: 6px;
    }

    .sidebar::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.1);
    }

    .sidebar::-webkit-scrollbar-thumb {
      background: var(--primary-color);
      border-radius: 10px;
    }

    .sidebar-header {
      padding: 0 25px 30px;
      border-bottom: 2px solid rgba(0, 212, 255, 0.2);
      margin-bottom: 30px;
    }

    .logo-container {
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 20px;
    }

    .logo-img {
      width: 50px;
      height: 50px;
      border-radius: 10px;
      background: white;
      padding: 5px;
      box-shadow: 0 0 20px rgba(0, 212, 255, 0.5);
    }

    .logo-img img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .logo-text {
      color: var(--primary-color);
      font-size: 20px;
      font-weight: 700;
      text-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
    }

    .admin-info {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 15px;
      background: rgba(0, 212, 255, 0.1);
      border-radius: 12px;
      border: 2px solid rgba(0, 212, 255, 0.3);
    }

    .admin-avatar {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      box-shadow: 0 0 15px rgba(0, 212, 255, 0.5);
    }

    .admin-details h3 {
      color: var(--primary-color);
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 3px;
    }

    .admin-details p {
      color: rgba(255, 255, 255, 0.6);
      font-size: 12px;
    }

    /* Navigation Menu */
    .nav-menu {
      padding: 0 15px;
    }

    .nav-item {
      margin-bottom: 8px;
    }

    .nav-link {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 14px 15px;
      color: rgba(255, 255, 255, 0.7);
      text-decoration: none;
      border-radius: 10px;
      transition: all 0.3s ease;
      font-size: 14px;
      font-weight: 500;
    }

    .nav-link:hover {
      background: rgba(0, 212, 255, 0.15);
      color: var(--primary-color);
      transform: translateX(5px);
      box-shadow: 0 0 15px rgba(0, 212, 255, 0.2);
    }

    .nav-link.active {
      background: rgba(0, 212, 255, 0.2);
      color: var(--primary-color);
      border-left: 4px solid var(--primary-color);
    }

    .nav-icon {
      font-size: 20px;
      width: 24px;
      text-align: center;
    }

    .logout-section {
      padding: 15px 25px;
      margin-top: 30px;
      border-top: 2px solid rgba(0, 212, 255, 0.2);
    }

    .logout-btn {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 14px 15px;
      background: rgba(255, 71, 87, 0.1);
      border: 2px solid var(--danger);
      color: var(--danger);
      text-decoration: none;
      border-radius: 10px;
      transition: all 0.3s ease;
      font-size: 14px;
      font-weight: 600;
      justify-content: center;
    }

    .logout-btn:hover {
      background: var(--danger);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 5px 20px rgba(255, 71, 87, 0.4);
    }

    /* Main Content */
    .main-content {
      margin-left: var(--sidebar-width);
      padding: 30px;
      min-height: 100vh;
    }

    /* Top Header */
    .top-header {
      background: var(--card-bg);
      padding: 25px 30px;
      border-radius: 15px;
      box-shadow: var(--shadow-md);
      margin-bottom: 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
      border: 2px solid var(--border-color);
      transition: all 0.3s ease;
    }

    .header-left h1 {
      color: var(--text-primary);
      font-size: 28px;
      margin-bottom: 5px;
    }

    .header-left p {
      color: var(--text-secondary);
      font-size: 14px;
    }

    .header-right {
      display: flex;
      gap: 15px;
    }

    .header-btn {
      padding: 12px 24px;
      border-radius: 10px;
      text-decoration: none;
      font-weight: 600;
      font-size: 14px;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
      border: none;
      cursor: pointer;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
      color: white;
      box-shadow: 0 4px 15px rgba(0, 212, 255, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(0, 212, 255, 0.5);
    }

    /* Statistics Cards */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: var(--card-bg);
      padding: 25px;
      border-radius: 15px;
      box-shadow: var(--shadow-md);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      border: 2px solid var(--border-color);
    }

    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 4px;
      height: 100%;
      background: var(--primary-color);
    }

    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-lg);
      border-color: var(--primary-color);
    }

    .stat-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 15px;
    }

    .stat-icon {
      width: 50px;
      height: 50px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(0, 212, 255, 0.2));
      color: var(--primary-color);
    }

    .stat-value {
      font-size: 32px;
      font-weight: 700;
      color: var(--primary-color);
      margin-bottom: 5px;
    }

    .stat-label {
      color: var(--text-secondary);
      font-size: 14px;
    }

    /* Content Section */
    .content-section {
      background: var(--card-bg);
      padding: 30px;
      border-radius: 15px;
      box-shadow: var(--shadow-md);
      margin-bottom: 30px;
      border: 2px solid var(--border-color);
      transition: all 0.3s ease;
    }

    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
      padding-bottom: 15px;
      border-bottom: 2px solid var(--border-color);
    }

    .section-title {
      font-size: 20px;
      font-weight: 700;
      color: var(--text-primary);
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .section-actions {
      display: flex;
      gap: 10px;
    }

    .search-box {
      position: relative;
      display: flex;
      align-items: center;
    }

    .search-input {
      padding: 10px 15px 10px 40px;
      border: 2px solid var(--border-color);
      border-radius: 10px;
      font-size: 14px;
      transition: all 0.3s ease;
      width: 250px;
      background: var(--bg-tertiary);
      color: var(--text-primary);
    }

    .search-input:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 15px rgba(0, 212, 255, 0.2);
    }

    .search-icon {
      position: absolute;
      left: 12px;
      color: var(--text-tertiary);
      font-size: 16px;
    }

    /* News Grid */
    .news-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 20px;
    }

    .news-card {
      background: var(--card-bg);
      border-radius: 12px;
      overflow: hidden;
      box-shadow: var(--shadow-md);
      transition: all 0.3s ease;
      border: 2px solid var(--border-color);
    }

    .news-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-lg);
      border-color: var(--primary-color);
    }

    .news-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .news-content {
      padding: 20px;
    }

    .news-id {
      display: inline-block;
      padding: 4px 12px;
      background: rgba(0, 212, 255, 0.1);
      color: var(--primary-color);
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      margin-bottom: 10px;
    }

    .news-title {
      font-size: 18px;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 10px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .news-excerpt {
      color: var(--text-secondary);
      font-size: 14px;
      line-height: 1.6;
      margin-bottom: 15px;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .news-meta {
      display: flex;
      align-items: center;
      gap: 15px;
      color: var(--text-tertiary);
      font-size: 12px;
      padding-top: 15px;
      border-top: 1px solid var(--border-color);
      margin-bottom: 15px;
    }

    .news-actions {
      display: flex;
      gap: 10px;
    }

    .action-btn {
      flex: 1;
      padding: 10px;
      border: none;
      border-radius: 8px;
      font-size: 13px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
    }

    .btn-edit {
      background: rgba(0, 212, 255, 0.1);
      color: var(--primary-color);
      border: 2px solid rgba(0, 212, 255, 0.3);
    }

    .btn-edit:hover {
      background: var(--primary-color);
      color: white;
      transform: translateY(-2px);
    }

    .btn-delete {
      background: rgba(255, 71, 87, 0.1);
      color: var(--danger);
      border: 2px solid rgba(255, 71, 87, 0.3);
    }

    .btn-delete:hover {
      background: var(--danger);
      color: white;
      transform: translateY(-2px);
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: var(--text-tertiary);
    }

    .empty-state-icon {
      font-size: 80px;
      margin-bottom: 20px;
      opacity: 0.5;
    }

    .empty-state-text {
      font-size: 18px;
      margin-bottom: 10px;
      color: var(--text-secondary);
    }

    /* Mobile Toggle */
    .mobile-toggle {
      display: none;
      position: fixed;
      top: 20px;
      left: 20px;
      z-index: 1001;
      background: var(--primary-color);
      color: white;
      border: none;
      width: 50px;
      height: 50px;
      border-radius: 12px;
      font-size: 24px;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(0, 212, 255, 0.4);
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .sidebar {
        transform: translateX(-100%);
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .main-content {
        margin-left: 0;
      }

      .mobile-toggle {
        display: block;
      }

      .news-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      }

      .stats-grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      }

      .theme-toggle {
        top: 90px;
      }
    }

    @media (max-width: 768px) {
      .main-content {
        padding: 100px 20px 20px;
      }

      .top-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .header-right {
        width: 100%;
        flex-direction: column;
      }

      .header-btn {
        width: 100%;
        justify-content: center;
      }

      .search-input {
        width: 100%;
      }

      .section-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
      }

      .section-actions {
        width: 100%;
        flex-direction: column;
      }

      .theme-toggle {
        top: 85px;
        right: 20px;
        width: 45px;
        height: 45px;
        font-size: 20px;
      }
    }

    /* Loading Animation */
    @keyframes shimmer {
      0% { background-position: -1000px 0; }
      100% { background-position: 1000px 0; }
    }

    .loading {
      animation: shimmer 2s infinite;
      background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
      background-size: 1000px 100%;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.95); }
      to { opacity: 1; transform: scale(1); }
    }
  </style>
</head>
