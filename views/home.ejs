<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portal Ekosistem Laut - Pulau Tunda</title>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700;900&family=Inter:wght@300;400;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    /* ==================== ROOT & BASE VARIABLES ==================== */
    :root {
      --primary: #00b4a6;
      --secondary: #006b8c;
      --accent: #00e5d0;  
      --dark: #003d52;
      --bg-primary: #ffffff;
      --bg-secondary: rgba(224, 247, 245, 0.98);
      --text-primary: #333;
      --text-secondary: #555;
    }

    [data-theme="dark"] {
      --bg-primary: #0a1128;
      --bg-secondary: rgba(10, 17, 40, 0.98);
      --text-primary: #e0e0e0;
      --text-secondary: #b0b0b0;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      width: 100%;
      overflow-x: hidden;
    }

    body {
      font-family: 'Inter', 'Segoe UI', sans-serif;
      background: var(--bg-primary);
      color: var(--text-primary);
      transition: background 0.5s ease, color 0.5s ease;
    }

    /* ==================== PARTICLE CANVAS (DARK MODE ONLY) ==================== */
    #particleCanvas {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      opacity: 0;
      transition: opacity 0.5s ease;
      pointer-events: none;
    }

    [data-theme="dark"] #particleCanvas {
      opacity: 0.4;
    }

    /* ==================== FLOATING TECH SYMBOLS (DARK MODE ONLY) ==================== */
    .tech-symbol {
      position: fixed;
      font-size: 40px;
      opacity: 0;
      pointer-events: none;
      animation: floatTech 15s ease-in-out infinite;
      filter: drop-shadow(0 0 10px var(--accent));
      transition: opacity 0.5s ease;
      z-index: 0;
    }

    [data-theme="dark"] .tech-symbol {
      opacity: 0.15;
    }

    .tech-1 { top: 15%; left: 10%; animation-delay: 0s; }
    .tech-2 { top: 25%; right: 15%; animation-delay: 2s; }
    .tech-3 { bottom: 25%; left: 20%; animation-delay: 4s; }
    .tech-4 { bottom: 35%; right: 20%; animation-delay: 6s; }
    .tech-5 { top: 50%; left: 5%; animation-delay: 8s; }
    .tech-6 { top: 60%; right: 10%; animation-delay: 10s; }
    .tech-7 { top: 70%; left: 50%; animation-delay: 12s; }
    .tech-8 { bottom: 15%; right: 45%; animation-delay: 14s; }

    @keyframes floatTech {
      0%, 100% { 
        transform: translateY(0px) translateX(0px) rotate(0deg); 
      }
      25% { 
        transform: translateY(-30px) translateX(20px) rotate(10deg); 
      }
      50% { 
        transform: translateY(-15px) translateX(-20px) rotate(-10deg); 
      }
      75% { 
        transform: translateY(-25px) translateX(15px) rotate(5deg); 
      }
    }

    /* ==================== KEYFRAMES ==================== */
    @keyframes headerShimmer {
      0%, 100% {
        background-position: 0% 50%;
        box-shadow: 0 0 20px rgba(0,229,208,0.3), inset 0 0 20px rgba(0,229,208,0.1);
      }
      50% {
        background-position: 100% 50%;
        box-shadow: 0 0 40px rgba(0,229,208,0.6), inset 0 0 30px rgba(0,229,208,0.2);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(50px);
        filter: blur(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
      }
    }

    @keyframes slideInLeft {
      from {
        opacity: 0;
        transform: translateX(-80px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes slideInRight {
      from {
        opacity: 0;
        transform: translateX(80px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes scaleIn {
      from {
        opacity: 0;
        transform: scale(0.8);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @keyframes popIn {
      0% {
        opacity: 0;
        transform: scale(0.5) rotate(-10deg);
      }
      50% {
        transform: scale(1.1) rotate(5deg);
      }
      100% {
        opacity: 1;
        transform: scale(1) rotate(0deg);
      }
    }

    @keyframes glow {
      0%, 100% { box-shadow: 0 0 20px rgba(0, 229, 208, 0.5); }
      50% { box-shadow: 0 0 40px rgba(0, 229, 208, 0.8); }
    }

    @keyframes gradientFlow {
      0% { background-position: 0% 0%; }
      100% { background-position: 300% 0%; }
    }

    @keyframes logoEntrance {
      0% {
        opacity: 0;
        transform: translateX(-80px) scale(0.7) rotate(-15deg);
      }
      70% {
        transform: translateX(15px) scale(1.08) rotate(3deg);
      }
      100% {
        opacity: 1;
        transform: translateX(0) scale(1) rotate(0deg);
      }
    }

    @keyframes scrollButtonFloat {
      0%, 100% { transform: translateY(0) scale(1); }
      50% { transform: translateY(-10px) scale(1.05); }
    }

    @keyframes shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }

    /* ==================== HEADER STYLES ==================== */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      width: 100%;
      background: linear-gradient(-45deg, rgba(255,255,255,0.98), rgba(240,250,250,0.98), rgba(255,255,255,0.98), rgba(240,250,250,0.98));
      background-size: 400% 400%;
      backdrop-filter: blur(25px) saturate(200%);
      box-shadow: 0 10px 40px rgba(0, 180, 166, 0.15), 0 0 30px rgba(0,229,208,0.1);
      z-index: 1000;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      border-bottom: 3px solid rgba(0, 180, 166, 0.2);
      animation: headerShimmer 6s ease-in-out infinite;
      height: 100px;
      padding: 0 40px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .header.scrolled {
      background: rgba(255, 255, 255, 0) !important;
      backdrop-filter: none !important;
      box-shadow: none !important;
      border-bottom: none !important;
      height: 80px;
    }

    [data-theme="dark"] .header {
      background: linear-gradient(90deg, rgba(0, 90, 80, 0.95) 0%, rgba(0, 107, 140, 0.95) 25%, rgba(0, 65, 90, 0.95) 50%, rgba(10, 17, 40, 0.95) 100%);
      animation: none;
    }

    .header::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, #00b4a6 0%, #00e5d0 25%, #006b8c 50%, #00e5d0 75%, #00b4a6 100%);
      background-size: 300% 100%;
      animation: gradientFlow 6s linear infinite;
      box-shadow: 0 0 15px rgba(0,229,208,0.4);
      transition: opacity 0.5s ease;
    }

    .header.scrolled::after {
      opacity: 0;
    }

    [data-theme="dark"] .header.scrolled {
      background: rgba(0, 0, 0, 0) !important;
      backdrop-filter: none !important;
      box-shadow: none !important;
      border-bottom: none !important;
    }

    .logo-section {
      display: flex;
      align-items: center;
      gap: 16px;
      animation: logoEntrance 1s cubic-bezier(0.34, 1.56, 0.64, 1);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      flex: 0 0 auto;
    }

    .logo-icon {
      width: 80px;
      height: 80px;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      filter: drop-shadow(0 8px 20px rgba(0,180,166,0.3));
      flex-shrink: 0;
      transition: all 0.3s ease;
    }

    .header.scrolled .logo-icon {
      width: 60px;
      height: 60px;
    }

    .logo-icon img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      transition: transform 0.3s ease;
    }

    .logo-icon:hover img {
      transform: scale(1.1) rotate(5deg);
    }

    .logo-text {
      display: flex;
      flex-direction: column;
      gap: 2px;
      justify-content: center;
    }

    .logo-text .main-title {
      font-size: 1.3rem;
      font-weight: 900;
      color: var(--text-primary);
      line-height: 1.1;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin: 0;
      opacity: 1;
      transition: font-size 0.3s ease;
    }

    .header.scrolled .logo-text .main-title {
      font-size: 1.1rem;
    }

    .logo-text .subtitle {
      font-size: 0.78rem;
      color: var(--text-secondary);
      font-weight: 600;
      letter-spacing: 0.3px;
      margin: 0;
      opacity: 1;
    }

    .top-bar {
      display: flex;
      align-items: center;
      gap: 14px;
      margin-left: auto;
      position: relative;
      z-index: 1;
    }

    .user-greeting {
      padding: 11px 20px;
      background: linear-gradient(135deg, rgba(0,180,166,0.1), rgba(0,229,208,0.12));
      border-radius: 12px;
      font-weight: 700;
      color: var(--primary);
      font-size: 0.92rem;
      border: 2px solid rgba(0,180,166,0.2);
    }

    .top-bar a,
    .top-bar details summary {
      color: var(--text-primary);
      text-decoration: none;
      padding: 11px 20px;
      font-size: 0.92rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.6px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      border-radius: 12px;
      display: inline-block;
      white-space: nowrap;
      position: relative;
    }

    .top-bar a:hover,
    .top-bar details summary:hover {
      color: var(--primary);
      background: linear-gradient(135deg, rgba(0,180,166,0.1), rgba(0,229,208,0.12));
      transform: translateY(-3px);
    }

    .top-bar details {
      position: relative;
    }

    .top-bar details summary {
      list-style: none;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .top-bar details summary::after {
      content: '‚ñº';
      font-size: 0.7rem;
      margin-left: 6px;
      transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .top-bar details[open] summary::after {
      transform: rotate(180deg);
    }

    .top-bar details ul {
      position: absolute;
      top: calc(100% + 8px);
      left: 0;
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(25px) saturate(200%);
      box-shadow: 0 15px 50px rgba(0,180,166,0.25);
      border-radius: 18px;
      min-width: 240px;
      overflow: hidden;
      list-style: none;
      padding: 14px 0;
      animation: fadeInUp 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
      border: 2px solid rgba(0,180,166,0.2);
      z-index: 1001;
      margin: 0;
    }

    [data-theme="dark"] .top-bar details ul {
      background: rgba(10, 17, 40, 0.98);
      border: 2px solid rgba(0, 229, 208, 0.3);
    }

    .top-bar details ul li {
      list-style: none;
    }

    .top-bar details ul li a {
      display: block;
      padding: 13px 24px;
      color: var(--text-primary);
      text-decoration: none;
      font-size: 0.92rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .top-bar details ul li a:hover {
      background: linear-gradient(90deg, #00b4a6, #006b8c);
      color: white;
      padding-left: 36px;
      transform: translateX(6px);
    }

    .logout {
      background: linear-gradient(135deg, #dc3545, #c82333) !important;
      color: white !important;
      padding: 11px 24px !important;
      border-radius: 28px;
      font-weight: 800;
      box-shadow: 0 6px 20px rgba(220,53,69,0.4);
    }

    .logout:hover {
      background: linear-gradient(135deg, #c82333, #a71d2a) !important;
      transform: translateY(-3px) scale(1.05);
    }

    .top-bar > a[href="/login-admin"] {
      background: linear-gradient(135deg, #00b4a6, #006b8c) !important;
      color: white !important;
      padding: 11px 24px !important;
      border-radius: 28px;
      font-weight: 800;
    }

    .top-bar > a[href="/login-admin"]:hover {
      background: linear-gradient(135deg, #006b8c, #003d52) !important;
      transform: translateY(-3px) scale(1.05);
    }

  /* ==================== HERO SECTION ==================== */
.hero {
  position: relative;
  width: 100%;
  height: calc(100vh - 100px);
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 100px;
}

.video-background {
  position: absolute;
  top: 50%;
  left: 50%;
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
  /* ZOOM DIKURANGI - scale dari 1.05 ke 1.0 (tidak ada zoom) */
  transform: translate(-50%, -50%) scale(1.0);
  z-index: 1;
  object-fit: cover;
  /* LEBIH TERANG - brightness dinaikkan dari 0.75 ke 0.95 */
  filter: brightness(0.95) contrast(1.1) saturate(1.15);
  /* SMOOTH TRANSITION */
  transition: transform 0.3s ease-out, filter 0.3s ease-out;
}

/* OPTIONAL: Efek zoom smooth saat hover */
.hero:hover .video-background {
  transform: translate(-50%, -50%) scale(1.02);
}

.video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* OPACITY DIKURANGI - dari rgba(0,0,0,0.3-0.5) ke rgba(0,0,0,0.1-0.25) */
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.25) 100%);
  z-index: 2;
  /* SMOOTH TRANSITION */
  transition: background 0.3s ease-out;
}

.hero-content {
  position: relative;
  z-index: 3;
  text-align: center;
  color: white;
  padding: 50px 55px;
  max-width: 900px;
  /* OPACITY DIKURANGI DRASTIS - dari rgba(0,0,0,0.4) ke rgba(0,0,0,0.05) */
  background: rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(25px) saturate(170%);
  border-radius: 32px;
  /* BORDER LEBIH TERANG - opacity dinaikkan dari 0.2 ke 0.4 */
  border: 2.5px solid rgba(255, 255, 255, 0.4);
  /* SMOOTH ANIMATION */
  animation: fadeInUp 1.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  /* SMOOTH TRANSITION */
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Smooth hover effect untuk hero content */
.hero-content:hover {
  transform: translateY(-5px);
  background: rgba(0, 0, 0, 0.1);
  box-shadow: 0 20px 60px rgba(0, 180, 166, 0.3);
  border-color: rgba(0, 229, 208, 0.6);
}

.hero-content h1 {
  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: 900;
  margin-bottom: 20px;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  /* TEXT SHADOW DIPERKUAT - agar tetap terbaca dengan background transparan */
  text-shadow: 
    0 2px 12px rgba(0, 0, 0, 0.7),
    0 4px 24px rgba(0, 0, 0, 0.5);
  /* SMOOTH TRANSITION */
  transition: all 0.3s ease-out;
}

.hero-content p {
  font-size: clamp(1.05rem, 2.5vw, 1.45rem);
  margin-bottom: 38px;
  line-height: 1.6;
  /* TEXT SHADOW DIPERKUAT - agar tetap terbaca */
  text-shadow: 
    0 1px 8px rgba(0, 0, 0, 0.6),
    0 2px 16px rgba(0, 0, 0, 0.4);
  /* SMOOTH TRANSITION */
  transition: all 0.3s ease-out;
}

.hero-buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
  animation: fadeInUp 1.2s ease-out 0.7s both;
}

.btn {
  padding: 16px 42px;
  font-size: 1.05rem;
  font-weight: 800;
  text-decoration: none;
  border-radius: 50px;
  /* SMOOTH TRANSITION - ditingkatkan */
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  border: none;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  overflow: hidden;
  display: inline-block;
  position: relative;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  /* SMOOTH TRANSITION */
  transition: left 0.6s ease-out;
}

.btn:hover::before {
  left: 100%;
}

.btn-primary {
  background: linear-gradient(135deg, rgba(255,255,255,0.98), rgba(255,255,255,1));
  color: var(--primary);
  box-shadow: 0 12px 40px rgba(255,255,255,0.35);
}

.btn-primary:hover {
  /* SMOOTH TRANSFORM - scale dikurangi dari 1.05 ke 1.03 */
  transform: translateY(-5px) scale(1.03);
  box-shadow: 0 18px 50px rgba(0,229,208,0.5);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: 3px solid rgba(255,255,255,0.75);
  box-shadow: 0 12px 40px rgba(0,0,0,0.35);
  backdrop-filter: blur(12px);
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.98);
  color: var(--primary);
  /* SMOOTH TRANSFORM - scale dikurangi dari 1.05 ke 1.03 */
  transform: translateY(-5px) scale(1.03);
}

/* Animasi fadeInUp yang lebih smooth */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

    /* ==================== SLIDE BAR WITH NEW CONTENT ==================== */
    .slide-bar-container {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 140px;
      z-index: 4;
      overflow: hidden;
      background: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(10px);
      border-top: 3px solid rgba(0, 229, 208, 0.3);
    }

    .slide-bar {
      display: flex;
      width: fit-content;
      height: 100%;
      animation: carouselSlide 60s linear infinite;
    }

    @keyframes carouselSlide {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }

    .slide-bar:hover {
      animation-play-state: paused;
    }

    .slide-item {
      flex: 0 0 400px;
      padding: 20px 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-right: 2px solid rgba(0, 229, 208, 0.2);
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }

    .slide-item::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 50px;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(0,229,208,0.3), transparent);
      transition: left 0.5s;
    }

    .slide-item:hover::before {
      left: 100%;
    }

    .slide-item:hover {
      background: rgba(0, 229, 208, 0.18);
      transform: translateY(-8px) scale(1.03);
      box-shadow: 0 12px 35px rgba(0, 229, 208, 0.4);
    }

    .slide-item-content {
      color: white;
      text-align: center;
      z-index: 1;
    }

   .slide-item-content .slide-item-icon {
  width: 40px;              /* lebih kecil dari sebelumnya */
  height: 40px;
  margin: 0 auto 6px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 1.4rem;        /* tadinya 2.5rem */
  background: linear-gradient(135deg, #00b4a6, #00e5d0);
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.35);
  animation: bounce 2s ease-in-out infinite;
}

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }

    .slide-item-content h4 {
      font-size: 1.1rem;
      margin-bottom: 8px;
      font-weight: 800;
      text-shadow: 0 3px 12px rgba(0, 0, 0, 0.6);
      color: #00e5d0;
    }

    .slide-item-content p {
      font-size: 0.88rem;
      font-weight: 400;
      opacity: 0.9;
      line-height: 1.5;
    }

    /* ==================== ABOUT SECTION WITH POPUP ==================== */
    .about-section {
      background: linear-gradient(135deg, #f0f9f9 0%, #e8f5f5 100%);
      padding: 6rem 2rem;
      margin-top: 0;
      position: relative;
    }

    [data-theme="dark"] .about-section {
      background: linear-gradient(135deg, rgba(0, 90, 80, 0.15) 0%, rgba(0, 107, 140, 0.15) 100%);
    }

    .about-content {
      max-width: 1200px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .about-text h2 {
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      font-weight: 900;
      color: #4A90A4;
      margin-bottom: 2rem;
      animation: slideInLeft 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    [data-theme="dark"] .about-text h2 {
      color: #00e5d0;
    }

    .about-text p {
      font-size: 1.1rem;
      line-height: 1.8;
      color: #555;
      margin-bottom: 1.5rem;
      animation: fadeInUp 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) 0.2s both;
    }

    [data-theme="dark"] .about-text p {
      color: #b0b0b0;
    }

    .about-stats {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
