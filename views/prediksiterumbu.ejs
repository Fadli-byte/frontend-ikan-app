    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* ==================== LIGHT THEME (DEFAULT) ==================== */
        :root {
            --primary: #00b4a6;
            --primary-dark: #006b8c;
            --secondary: #57b2be;
            --text-primary: #1a1a1a;
            --text-secondary: #666666;
            --bg-primary: #f8fafb;
            --bg-secondary: #ffffff;
            --border-color: rgba(0, 180, 166, 0.2);
            --shadow: 0 5px 25px rgba(0, 180, 166, 0.08);
        }

        /* ==================== DARK THEME ==================== */
        html[data-theme="dark"] {
            --primary: #00d9ff;
            --primary-dark: #006b8c;
            --secondary: #00ffa3;
            --text-primary: #e0e0ff;
            --text-secondary: #a0a0c0;
            --bg-primary: #0a0e27;
            --bg-secondary: #1a1a3e;
            --border-color: rgba(0, 217, 255, 0.2);
            --shadow: 0 0 30px rgba(0, 217, 255, 0.2);
        }

        html, body {
            font-family: 'Inter', 'Segoe UI', sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            overflow-x: hidden;
            transition: background 0.5s ease, color 0.5s ease;
        }

        /* ==================== DARK THEME ANIMATED BACKGROUND ==================== */
        html[data-theme="dark"]::before {
            content: '';
            position: fixed;
            inset: 0;
            background: 
                radial-gradient(ellipse at 20% 50%, rgba(0, 217, 255, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at 80% 80%, rgba(0, 255, 163, 0.1) 0%, transparent 50%),
                radial-gradient(ellipse at 50% 0%, rgba(255, 0, 110, 0.08) 0%, transparent 60%);
            animation: backgroundShift 15s ease-in-out infinite;
            pointer-events: none;
            z-index: 0;
        }

        @keyframes backgroundShift {
            0%, 100% { transform: translate(0, 0); }
            50% { transform: translate(30px, 20px); }
        }

        html[data-theme="dark"]::after {
            content: '';
            position: fixed;
            inset: 0;
            background-image: 
                linear-gradient(0deg, transparent 24%, rgba(0, 217, 255, 0.05) 25%, rgba(0, 217, 255, 0.05) 26%, transparent 27%, transparent 74%, rgba(0, 217, 255, 0.05) 75%, rgba(0, 217, 255, 0.05) 76%, transparent 77%, transparent),
                linear-gradient(90deg, transparent 24%, rgba(0, 217, 255, 0.05) 25%, rgba(0, 217, 255, 0.05) 26%, transparent 27%, transparent 74%, rgba(0, 217, 255, 0.05) 75%, rgba(0, 217, 255, 0.05) 76%, transparent 77%, transparent);
            background-size: 50px 50px;
            animation: gridMove 20s linear infinite;
            pointer-events: none;
            z-index: 0;
        }

        @keyframes gridMove {
            0% { transform: translateY(0); }
            100% { transform: translateY(50px); }
        }

        body > * {
            position: relative;
            z-index: 1;
        }

        /* ==================== HEADER ==================== */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            background: linear-gradient(135deg, rgba(248, 250, 251, 0.98), rgba(255, 255, 255, 0.98));
            backdrop-filter: blur(25px) saturate(200%);
            z-index: 1000;
            border-bottom: 3px solid var(--primary);
            box-shadow: var(--shadow);
            height: 90px;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            padding: 0 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        html[data-theme="dark"] .header {
            background: linear-gradient(135deg, rgba(10, 14, 39, 0.95), rgba(26, 26, 62, 0.95));
            box-shadow: 0 8px 32px rgba(0, 217, 255, 0.2), inset 0 1px 0 rgba(0, 217, 255, 0.1);
            animation: headerGlow 3s ease-in-out infinite;
        }

        @keyframes headerGlow {
            0%, 100% { box-shadow: 0 8px 32px rgba(0, 217, 255, 0.2), inset 0 1px 0 rgba(0, 217, 255, 0.1); }
            50% { box-shadow: 0 8px 40px rgba(0, 217, 255, 0.4), inset 0 1px 0 rgba(0, 217, 255, 0.2); }
        }

        .header-container {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 100%;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 18px;
            animation: slideInLeft 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
                filter: blur(0);
            }
        }

        .logo-icon {
            width: 70px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(0, 180, 166, 0.1), rgba(0, 180, 166, 0.05));
            border: 2px solid var(--primary);
            border-radius: 12px;
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
        }

        html[data-theme="dark"] .logo-icon {
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.1), rgba(0, 255, 163, 0.05));
            animation: neonFlicker 0.15s infinite, pulse 2s ease-in-out infinite;
            box-shadow: 0 0 20px rgba(0, 217, 255, 0.3), inset 0 0 20px rgba(0, 217, 255, 0.1);
        }

        @keyframes neonFlicker {
            0% { box-shadow: 0 0 20px rgba(0, 217, 255, 0.3), inset 0 0 20px rgba(0, 217, 255, 0.1); }
            50% { box-shadow: 0 0 30px rgba(0, 217, 255, 0.5), inset 0 0 30px rgba(0, 217, 255, 0.2); }
            100% { box-shadow: 0 0 20px rgba(0, 217, 255, 0.3), inset 0 0 20px rgba(0, 217, 255, 0.1); }
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.02); }
        }

        .logo-icon:hover {
            transform: scale(1.05);
        }

        .logo-icon img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        html[data-theme="dark"] .logo-icon img {
            filter: drop-shadow(0 0 8px rgba(0, 217, 255, 0.4));
        }

        .logo-text {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .logo-text .main-title {
            font-size: 1.2rem;
            font-weight: 900;
            color: var(--primary);
            line-height: 1.2;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            transition: all 0.3s ease;
        }

        html[data-theme="dark"] .logo-text .main-title {
            text-shadow: 0 0 10px rgba(0, 217, 255, 0.5), 0 0 20px rgba(0, 217, 255, 0.3);
        }

        .logo-text .subtitle {
            font-size: 0.8rem;
            color: var(--text-secondary);
            font-weight: 600;
            letter-spacing: 0.6px;
        }

        .top-bar {
            display: flex;
            align-items: center;
            gap: 14px;
            margin-left: auto;
            animation: slideInRight 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
                filter: blur(0);
            }
        }

        .user-greeting {
            display: flex;
            align-items: center;
            padding: 11px 22px;
            background: rgba(0, 180, 166, 0.1);
            border-radius: 10px;
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
        }

        html[data-theme="dark"] .user-greeting {
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.15), rgba(0, 255, 163, 0.05));
            border: 1px solid var(--primary);
            box-shadow: 0 0 15px rgba(0, 217, 255, 0.2);
        }

        .greeting-text {
            font-size: 1rem;
            font-weight: 700;
            color: var(--primary);
            letter-spacing: 0.3px;
        }

        .top-bar a,
        .top-bar details summary {
            color: var(--text-primary);
            text-decoration: none;
            padding: 11px 20px;
            font-size: 0.85rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.6px;
            cursor: pointer;
            border-radius: 8px;
            position: relative;
            transition: all 0.3s ease;
            border: 1px solid transparent;
        }

        .top-bar a:hover,
        .top-bar details summary:hover {
            color: var(--primary);
            border-color: var(--primary);
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        html[data-theme="dark"] .top-bar a:hover,
        html[data-theme="dark"] .top-bar details summary:hover {
            box-shadow: 0 0 15px rgba(0, 217, 255, 0.3);
        }

        .top-bar details {
            position: relative;
        }

        .top-bar details summary {
            list-style: none;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .top-bar details summary::after {
            content: '‚ñº';
            font-size: 0.6rem;
            margin-left: 6px;
            transition: transform 0.5s;
        }

        .top-bar details[open] summary::after {
            transform: rotate(180deg);
        }

        .top-bar details ul {
            position: absolute;
            top: calc(100% + 10px);
            left: 0;
            background: var(--bg-secondary);
            backdrop-filter: blur(25px);
            box-shadow: var(--shadow);
            border-radius: 12px;
            min-width: 240px;
            overflow: hidden;
            list-style: none;
            padding: 12px 0;
            border: 1px solid var(--border-color);
            z-index: 1001;
            animation: dropdownSlide 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        html[data-theme="dark"] .top-bar details ul {
            background: linear-gradient(135deg, rgba(10, 14, 39, 0.98), rgba(26, 26, 62, 0.98));
            box-shadow: 0 0 30px rgba(0, 217, 255, 0.3);
            border: 1px solid var(--primary);
        }

        @keyframes dropdownSlide {
            from {
                opacity: 0;
                transform: translateY(-20px) scale(0.95);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
                filter: blur(0);
            }
        }

        .top-bar details ul li a {
            display: block;
            padding: 12px 24px;
            color: var(--text-primary);
            text-decoration: none;
            font-size: 0.85rem;
            text-transform: none;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
            border-bottom: 1px solid var(--border-color);
        }

        .top-bar details ul li:last-child a {
            border-bottom: none;
        }

        .top-bar details ul li a::before {
            content: '';
            position: absolute;
            left: -100%;
            top: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 180, 166, 0.2), transparent);
            transition: left 0.4s ease;
            z-index: -1;
        }

        html[data-theme="dark"] .top-bar details ul li a::before {
            background: linear-gradient(90deg, transparent, rgba(0, 217, 255, 0.2), transparent);
        }

        .top-bar details ul li a:hover {
            color: var(--primary);
            padding-left: 32px;
        }

        .top-bar details ul li a:hover::before {
            left: 100%;
        }

        .logout {
            background: transparent !important;
            color: #e74c3c !important;
            padding: 11px 24px !important;
            border-radius: 8px;
            font-weight: 800;
            border: 1px solid #e74c3c !important;
            box-shadow: 0 0 10px rgba(231, 76, 60, 0.2) !important;
            transition: all 0.3s ease !important;
        }

        .logout:hover {
            background: rgba(231, 76, 60, 0.1) !important;
            box-shadow: 0 0 20px rgba(231, 76, 60, 0.3) !important;
        }

        .top-bar > a[href="/login-admin"] {
            background: transparent !important;
            color: var(--primary) !important;
            padding: 11px 24px !important;
            border-radius: 8px;
            font-weight: 800;
            border: 1px solid var(--primary) !important;
            box-shadow: 0 0 10px rgba(0, 180, 166, 0.2) !important;
            transition: all 0.3s ease !important;
        }

        .top-bar > a[href="/login-admin"]:hover {
            background: rgba(0, 180, 166, 0.1) !important;
            box-shadow: 0 0 20px rgba(0, 180, 166, 0.3) !important;
        }

        /* ==================== THEME TOGGLE ==================== */
        .theme-toggle {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, rgba(0, 180, 166, 0.1), rgba(0, 180, 166, 0.05));
            border: 2px solid var(--primary);
            border-radius: 10px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            transition: all 0.3s ease;
            color: var(--primary);
            box-shadow: var(--shadow);
        }

        html[data-theme="dark"] .theme-toggle {
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.15), rgba(0, 255, 163, 0.05));
            box-shadow: 0 0 15px rgba(0, 217, 255, 0.2);
        }

        .theme-toggle:hover {
            transform: scale(1.1) rotate(20deg);
        }

        html[data-theme="dark"] .theme-toggle:hover {
            box-shadow: 0 0 25px rgba(0, 217, 255, 0.4);
        }

        /* ==================== HERO SECTION ==================== */
        .hero-section {
            margin-top: 90px;
            height: 600px;
            background: linear-gradient(135deg, rgba(248, 250, 251, 0.4), rgba(248, 250, 251, 0.4)),
                        url('https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=1200&h=600&fit=crop') center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
            transition: all 0.5s ease;
        }

        html[data-theme="dark"] .hero-section {
            background: linear-gradient(135deg, rgba(10, 14, 39, 0.6), rgba(26, 26, 62, 0.6)),
                        url('https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=1200&h=600&fit=crop') center/cover;
        }

        .hero-overlay {
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at center, rgba(0, 180, 166, 0.15), rgba(0, 180, 166, 0.4));
            z-index: 1;
            transition: all 0.5s ease;
        }

        html[data-theme="dark"] .hero-overlay {
            background: linear-gradient(135deg, 
                rgba(0, 217, 255, 0.2) 0%, 
                transparent 40%,
                transparent 60%,
                rgba(0, 255, 163, 0.15) 100%),
                radial-gradient(circle at center, rgba(10, 14, 39, 0.3), rgba(10, 14, 39, 0.8));
            animation: heroOverlayShift 10s ease-in-out infinite;
        }

        @keyframes heroOverlayShift {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 0.7; }
        }

        .hero-content {
            position: relative;
            z-index: 2;
            animation: fadeInUp 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
                filter: blur(0);
            }
        }

        .hero-content h1 {
            font-size: clamp(2rem, 5vw, 3.5rem);
            font-weight: 900;
            margin-bottom: 15px;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
            letter-spacing: 1px;
        }

        html[data-theme="dark"] .hero-content h1 {
            text-shadow: 0 0 20px rgba(0, 217, 255, 0.6), 0 0 40px rgba(0, 217, 255, 0.3);
        }

        .hero-content p {
            font-size: clamp(1rem, 2vw, 1.2rem);
            max-width: 800px;
            margin: 0 auto 40px;
            text-shadow: 0 1px 5px rgba(0, 0, 0, 0.3);
            line-height: 1.6;
        }

        html[data-theme="dark"] .hero-content p {
            text-shadow: 0 0 15px rgba(0, 217, 255, 0.4);
            color: var(--text-secondary);
        }

        .hero-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 14px 32px;
            border: 2px solid white;
            background: transparent;
            color: white;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 700;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            position: relative;
            overflow: hidden;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .btn::before {
            content: '';
            position: absolute;
            inset: 0;
            background: var(--primary);
            z-index: -1;
            transform: translateX(-100%);
            transition: transform 0.4s ease;
        }

        .btn:hover::before {
            transform: translateX(0);
        }

        .btn:hover {
            color: white;
            transform: translateY(-3px);
        }

        html[data-theme="dark"] .btn {
            border-color: var(--primary);
        }

        /* ==================== MAIN CONTENT ==================== */
        .container {
            padding: 60px 40px;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* ==================== STATS GRID ==================== */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 25px;
            margin-bottom: 60px;
            margin-top: -80px;
            position: relative;
            z-index: 10;
        }

        .stat-card {
            background: var(--bg-secondary);
            border-radius: 12px;
            padding: 30px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
            text-align: center;
            animation: cardSlideUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) both;
            position: relative;
            overflow: hidden;
        }

        html[data-theme="dark"] .stat-card {
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.08), rgba(0, 255, 163, 0.04));
            box-shadow: 0 0 20px rgba(0, 217, 255, 0.2), inset 0 0 20px rgba(0, 217, 255, 0.05);
        }

        @keyframes cardSlideUp {
            from {
                opacity: 0;
                transform: translateY(40px);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
                filter: blur(0);
            }
        }

        .stat-card:nth-child(1) { animation-delay: 0.1s; }
        .stat-card:nth-child(2) { animation-delay: 0.2s; }
        .stat-card:nth-child(3) { animation-delay: 0.3s; }
        .stat-card:nth-child(4) { animation-delay: 0.4s; }

        .stat-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 15px 50px rgba(0, 180, 166, 0.2);
            border-color: var(--primary);
        }

        html[data-theme="dark"] .stat-card:hover {
            box-shadow: 0 0 40px rgba(0, 217, 255, 0.4), inset 0 0 30px rgba(0, 217, 255, 0.1);
        }

        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
            animation: bounce 2s ease-in-out infinite;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 800;
            color: var(--primary);
            margin-bottom: 5px;
        }

        html[data-theme="dark"] .stat-value {
            text-shadow: 0 0 15px rgba(0, 217, 255, 0.4);
        }

        .stat-label {
            font-size: 0.9rem;
            color: var(--text-secondary);
            font-weight: 600;
        }

        /* ==================== SECTION CARD ==================== */
        .section-card {
            background: var(--bg-secondary);
            border-radius: 16px;
            padding: 40px;
            margin-bottom: 40px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
            animation: cardSlideUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) 0.3s both;
            transition: all 0.5s ease;
        }

        html[data-theme="dark"] .section-card {
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.08), rgba(0, 255, 163, 0.04));
            box-shadow: 0 0 30px rgba(0, 217, 255, 0.2), inset 0 0 30px rgba(0, 217, 255, 0.05);
        }

        .section-title {
            font-size: 1.6rem;
            font-weight: 800;
            color: var(--primary);
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        html[data-theme="dark"] .section-title {
            text-shadow: 0 0 15px rgba(0, 217, 255, 0.3);
        }

        /* ==================== CLASS DEFINITIONS ==================== */
        .class-definitions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin: 30px 0;
        }

        .class-definition {
            border-radius: 15px;
            padding: 25px;
            border-left: 5px solid;
            background: var(--bg-secondary);
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
            border: 1px solid var(--border-color);
            position: relative;
        }

