    <script>
        // ==================== SMOOTH SCROLL ====================
        function smoothScroll(elementId) {
            const element = document.getElementById(elementId);
            if (element) {
                element.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        // ==================== THEME TOGGLE ====================
        class ThemeManager {
            constructor() {
                this.html = document.documentElement;
                this.themeToggle = document.getElementById('themeToggle');
                this.init();
            }

            init() {
                const savedTheme = localStorage.getItem('theme') || 'light';
                this.setTheme(savedTheme);
                this.themeToggle.addEventListener('click', () => this.toggleTheme());
            }

            setTheme(theme) {
                this.html.setAttribute('data-theme', theme);
                this.themeToggle.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
                localStorage.setItem('theme', theme);
            }

            toggleTheme() {
                const currentTheme = this.html.getAttribute('data-theme') || 'light';
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                this.setTheme(newTheme);
            }
        }

        // ==================== DATA ====================
        const originalData = {
            2: [34.809191, 24.480694, 35.201025, 26.551044, 35.708117, 34.82567, 34.82567],
            3: [22.877879, 5.279452, 33.206832, 29.980027, 31.997585, 31.63919, 31.63919]
        };

        const yearsActual = [2019, 2020, 2021, 2022, 2023, 2024, 2025];
        const yearsPredict = [2026, 2027, 2028, 2029, 2030];
        
        // Polynomial coefficients untuk prediksi
        const polynomialCoeffs = {
            2: {a: 34.0, b: 0.12, c: -0.015},
            3: {a: 23.0, b: 0.35, c: -0.02}
        };

        function predict(classId) {
            const coeffs = polynomialCoeffs[classId];
            const offsetYears = yearsPredict.map(y => y - 2019);
            return offsetYears.map(x => +(coeffs.a + coeffs.b * x + coeffs.c * x * x).toFixed(4));
        }

        const predictionData = {
            years: yearsActual.concat(yearsPredict),
            class2: originalData[2].concat(predict(2)),
            class3: originalData[3].concat(predict(3))
        };

        // ==================== MAP ====================
        let map, geoJsonLayer, baseLayers = {};

        function initMap() {
            map = L.map('karangMap').setView([-5.815, 106.2745], 14);

            baseLayers = {
                satellite: L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
                    attribution: '¬© Esri',
                    maxZoom: 19
                }),
                topo: L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Topo_Map/MapServer/tile/{z}/{y}/{x}', {
                    attribution: '¬© Esri',
                    maxZoom: 19
                }),
                osm: L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '¬© OpenStreetMap',
                    maxZoom: 19
                }),
                dark: L.tileLayer('https://tiles.stadiamaps.com/tiles/alidade_smooth_dark/{z}/{x}/{y}.png', {
                    attribution: '¬© Stadia Maps',
                    maxZoom: 19
                })
            };

            baseLayers.satellite.addTo(map);
            loadGeoJSON();
        }

        function loadGeoJSON() {
            if (geoJsonLayer) map.removeLayer(geoJsonLayer);

            const classColors = {
                2: '#2ecc71',
                3: '#e74c3c'
            };

            const className = {
                2: 'Karang Hidup',
                3: 'Karang Mati'
            };

            if (typeof window.karang25 !== 'undefined' && window.karang25) {
                geoJsonLayer = L.geoJSON(window.karang25, {
                    style: (feature) => {
                        const gridcode = feature.properties.gridcode || 2;
                        const warna = classColors[gridcode] || '#00b4a6';
                        return {
                            fillColor: warna,
                            fillOpacity: 0.75,
                            color: '#000000',
                            weight: 2,
                            opacity: 1
                        };
                    },
                    onEachFeature: (feature, layer) => {
                        const props = feature.properties;
                        const gridcode = props.gridcode || 2;
                        const luas = props.Luasan ? props.Luasan.toFixed(2) : 'N/A';
                        const warna = classColors[gridcode] || '#00b4a6';

                        const popup = `
                            <div style="font-family: Inter; font-size: 12px; padding: 15px; border-radius: 10px; width: 300px;">
                                <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 15px;">
                                    <div style="width: 24px; height: 24px; background: ${warna}; border-radius: 6px;"></div>
                                    <strong style="font-size: 13px;">ü™∏ ${className[gridcode]}</strong>
                                </div>
                                <table style="width: 100%; font-size: 11px; line-height: 2;">
                                    <tr><td>ID:</td><td style="text-align: right; font-weight: bold; color: ${warna};">#${props.Id || 'N/A'}</td></tr>
                                    <tr><td>Kelas:</td><td style="text-align: right; font-weight: bold; color: ${warna};">Kelas ${gridcode}</td></tr>
                                    <tr><td>Tipe:</td><td style="text-align: right;">${className[gridcode]}</td></tr>
                                    <tr><td>Luas:</td><td style="text-align: right; font-weight: bold; color: ${warna};">${luas} ha</td></tr>
                                </table>
                            </div>
                        `;

                        layer.bindPopup(popup, { maxWidth: 350 });
                        layer.on('mouseover', function() {
                            this.setStyle({ fillOpacity: 0.9, weight: 3, color: '#ffffff' });
                            this.openPopup();
                        });
                        layer.on('mouseout', function() {
                            this.setStyle({ fillOpacity: 0.75, weight: 2, color: '#000000' });
                        });
                    }
                }).addTo(map);

                if (geoJsonLayer.getBounds().isValid()) {
                    map.fitBounds(geoJsonLayer.getBounds(), { padding: [50, 50] });
                }
            }
        }

        document.querySelectorAll('.layer-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const layer = btn.dataset.layer;
                Object.values(baseLayers).forEach(baseLayer => map.removeLayer(baseLayer));
                baseLayers[layer].addTo(map);
                document.querySelectorAll('.layer-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
            });
        });

        // ==================== CHARTS ====================
        let trendChart, comparisonChart, pieChart, areaChart;

        function createTrendChart() {
            const ctx = document.getElementById('trendChart').getContext('2d');
            if (trendChart) trendChart.destroy();
            trendChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: predictionData.years.map(y => y.toString()),
                    datasets: [
                        {
                            label: 'Karang Hidup - Aktual',
                            data: [...predictionData.class2.slice(0, 7), ...Array(5).fill(null)],
                            borderColor: '#2ecc71',
                            backgroundColor: 'rgba(46, 204, 113, 0.1)',
                            borderWidth: 3,
                            pointRadius: 5,
                            pointBackgroundColor: '#2ecc71',
                            tension: 0.4,
                            fill: true
                        },
                        {
                            label: 'Karang Hidup - Prediksi',
                            data: [...Array(7).fill(null), ...predict(2)],
                            borderColor: '#27ae60',
                            backgroundColor: 'rgba(39, 174, 96, 0.1)',
                            borderWidth: 3,
                            borderDash: [10, 5],
                            pointRadius: 5,
                            pointBackgroundColor: '#27ae60',
                            tension: 0.4,
                            fill: true
                        },
                        {
                            label: 'Karang Mati - Aktual',
                            data: [...predictionData.class3.slice(0, 7), ...Array(5).fill(null)],
                            borderColor: '#e74c3c',
                            backgroundColor: 'rgba(231, 76, 60, 0.1)',
                            borderWidth: 3,
                            pointRadius: 5,
                            pointBackgroundColor: '#e74c3c',
                            tension: 0.4,
                            fill: true
                        },
                        {
                            label: 'Karang Mati - Prediksi',
                            data: [...Array(7).fill(null), ...predict(3)],
                            borderColor: '#c0392b',
                            backgroundColor: 'rgba(192, 57, 43, 0.1)',
                            borderWidth: 3,
                            borderDash: [10, 5],
                            pointRadius: 5,
                            pointBackgroundColor: '#c0392b',
                            tension: 0.4,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: true, labels: { font: { size: 11, weight: 'bold' } } }
                    },
                    scales: {
                        y: { beginAtZero: true, ticks: { font: { size: 10 } } }
                    }
                }
            });
        }

        function createComparisonChart() {
            const ctx = document.getElementById('comparisonChart').getContext('2d');
            const data2025Hidup = originalData[2][6];
            const data2025Mati = originalData[3][6];
            const data2030Hidup = predict(2)[4];
            const data2030Mati = predict(3)[4];
            
            if (comparisonChart) comparisonChart.destroy();
            comparisonChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Karang Hidup', 'Karang Mati'],
                    datasets: [
                        { label: '2025', data: [data2025Hidup, data2025Mati], backgroundColor: 'rgba(46, 204, 113, 0.8)', borderColor: '#2ecc71', borderWidth: 2 },
                        { label: '2030', data: [data2030Hidup, data2030Mati], backgroundColor: 'rgba(231, 76, 60, 0.8)', borderColor: '#e74c3c', borderWidth: 2 }
                    ]
                },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { labels: { font: { size: 11 } } } }, scales: { y: { beginAtZero: true } } }
            });
        }

        function createPieChart() {
            const ctx = document.getElementById('pieChart').getContext('2d');
            const data2030Hidup = predict(2)[4];
            const data2030Mati = predict(3)[4];
            
            if (pieChart) pieChart.destroy();
            pieChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Karang Hidup', 'Karang Mati'],
                    datasets: [{
                        data: [data2030Hidup, data2030Mati],
                        backgroundColor: ['rgba(46, 204, 113, 0.8)', 'rgba(231, 76, 60, 0.8)'],
                        borderWidth: 3,
                        borderColor: '#fff'
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'bottom', labels: { font: { size: 11 } } } } }
            });
        }

        function createAreaChart() {
            const ctx = document.getElementById('areaChart').getContext('2d');
            if (areaChart) areaChart.destroy();
            areaChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: predictionData.years.map(y => y.toString()),
                    datasets: [
                        { label: 'Karang Hidup', data: predictionData.class2, borderColor: '#2ecc71', fill: true, backgroundColor: 'rgba(46, 204, 113, 0.1)', tension: 0.4, pointRadius: 3 },
                        { label: 'Karang Mati', data: predictionData.class3, borderColor: '#e74c3c', fill: true, backgroundColor: 'rgba(231, 76, 60, 0.1)', tension: 0.4, pointRadius: 3 }
                    ]
                },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { labels: { font: { size: 11 } } } }, scales: { y: { beginAtZero: true } } }
            });
        }

        function populateTable() {
            const tbody = document.getElementById('predictionTable');
            predictionData.years.forEach((year, idx) => {
                const hidup = predictionData.class2[idx];
                const mati = predictionData.class3[idx];
                const total = hidup + mati;
                const rasio = (hidup / mati).toFixed(2);
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td><strong>${year}</strong></td>
                    <td style="color: #2ecc71; font-weight: bold;">${hidup.toFixed(2)}</td>
                    <td style="color: #e74c3c; font-weight: bold;">${mati.toFixed(2)}</td>
                    <td><strong>${total.toFixed(2)}</strong></td>
                    <td>${rasio}</td>
                    <td>${year <= 2025 ? '‚úì Aktual' : 'üìä Prediksi'}</td>
                `;
                tbody.appendChild(row);
            });
        }

        // ==================== DOWNLOAD ====================
        document.getElementById('downloadCSV').addEventListener('click', () => {
            let csv = 'Tahun,Karang Hidup,Karang Mati,Total,Rasio Hidup:Mati\n';
            predictionData.years.forEach((year, idx) => {
                const hidup = predictionData.class2[idx];
                const mati = predictionData.class3[idx];
                const total = hidup + mati;
                const rasio = (hidup / mati).toFixed(2);
                csv += `${year},${hidup.toFixed(2)},${mati.toFixed(2)},${total.toFixed(2)},${rasio}\n`;
            });
            const blob = new Blob([csv], { type: 'text/csv' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `prediksi_terumbu_karang_${new Date().toISOString().split('T')[0]}.csv`;
            a.click();
        });

        document.getElementById('downloadPDF').addEventListener('click', () => {
            html2pdf().set({
                margin: 10,
                filename: `prediksi_terumbu_karang_${new Date().toISOString().split('T')[0]}.pdf`,
                html2canvas: { scale: 2 },
                jsPDF: { orientation: 'landscape', format: 'a4' }
            }).from(document.querySelector('.container')).save();
        });

        // ==================== INITIALIZATION ====================
        window.addEventListener('load', () => {
            new ThemeManager();
            initMap();
            createTrendChart();
            createComparisonChart();
            createPieChart();
            createAreaChart();
            populateTable();

            console.log('%c‚ú® Prediksi Terumbu Karang Portal - Ready ‚ú®', 'background: linear-gradient(135deg, #2ecc71, #e74c3c); color: #fff; padding: 15px; border-radius: 5px; font-weight: bold; font-size: 16px;');
        });
    </script>
