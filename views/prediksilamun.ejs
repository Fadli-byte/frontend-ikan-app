    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #00d9ff;
            --primary-dark: #006b8c;
            --secondary: #00ffa3;
            --accent: #ff006e;
            --bg-dark: #0a0e27;
            --bg-darker: #050810;
            --text-primary: #e0e0ff;
            --text-secondary: #a0a0c0;
            --border-color: rgba(0, 217, 255, 0.2);
        }

        html, body {
            font-family: 'Space Mono', monospace;
            background: linear-gradient(135deg, #0a0e27 0%, #1a1a3e 50%, #0f0f2e 100%);
            color: var(--text-primary);
            overflow-x: hidden;
            position: relative;
        }

        /* ==================== ANIMATED BACKGROUND ==================== */
        body::before {
            content: '';
            position: fixed;
            inset: 0;
            background: 
                radial-gradient(ellipse at 20% 50%, rgba(0, 217, 255, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at 80% 80%, rgba(0, 255, 163, 0.1) 0%, transparent 50%),
                radial-gradient(ellipse at 50% 0%, rgba(255, 0, 110, 0.08) 0%, transparent 60%);
            animation: backgroundShift 15s ease-in-out infinite;
            pointer-events: none;
            z-index: 0;
        }

        @keyframes backgroundShift {
            0%, 100% {
                transform: translate(0, 0);
            }
            50% {
                transform: translate(30px, 20px);
            }
        }

        /* ==================== GRID BACKGROUND ==================== */
        body::after {
            content: '';
            position: fixed;
            inset: 0;
            background-image: 
                linear-gradient(0deg, transparent 24%, rgba(0, 217, 255, 0.05) 25%, rgba(0, 217, 255, 0.05) 26%, transparent 27%, transparent 74%, rgba(0, 217, 255, 0.05) 75%, rgba(0, 217, 255, 0.05) 76%, transparent 77%, transparent),
                linear-gradient(90deg, transparent 24%, rgba(0, 217, 255, 0.05) 25%, rgba(0, 217, 255, 0.05) 26%, transparent 27%, transparent 74%, rgba(0, 217, 255, 0.05) 75%, rgba(0, 217, 255, 0.05) 76%, transparent 77%, transparent);
            background-size: 50px 50px;
            animation: gridMove 20s linear infinite;
            pointer-events: none;
            z-index: 0;
        }

        @keyframes gridMove {
            0% {
                transform: translateY(0);
            }
            100% {
                transform: translateY(50px);
            }
        }

        /* ==================== CONTENT POSITIONING ==================== */
        body > * {
            position: relative;
            z-index: 1;
        }

        /* ==================== HEADER ==================== */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            background: linear-gradient(135deg, rgba(10, 14, 39, 0.95), rgba(26, 26, 62, 0.95));
            backdrop-filter: blur(30px) saturate(200%);
            border-bottom: 2px solid var(--primary);
            box-shadow: 0 8px 32px rgba(0, 217, 255, 0.2), inset 0 1px 0 rgba(0, 217, 255, 0.1);
            z-index: 1000;
            height: 90px;
            transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
            padding: 0 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            animation: headerGlow 3s ease-in-out infinite;
        }

        @keyframes headerGlow {
            0%, 100% {
                box-shadow: 0 8px 32px rgba(0, 217, 255, 0.2), inset 0 1px 0 rgba(0, 217, 255, 0.1);
            }
            50% {
                box-shadow: 0 8px 40px rgba(0, 217, 255, 0.4), inset 0 1px 0 rgba(0, 217, 255, 0.2);
            }
        }

        .header-container {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 100%;
            position: relative;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 18px;
            animation: slideInLeft 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
                filter: blur(0);
            }
        }

        .logo-icon {
            width: 70px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.1), rgba(0, 255, 163, 0.05));
            border: 2px solid var(--primary);
            border-radius: 12px;
            animation: neonFlicker 0.15s infinite, pulse 2s ease-in-out infinite;
            box-shadow: 0 0 20px rgba(0, 217, 255, 0.3), inset 0 0 20px rgba(0, 217, 255, 0.1);
        }

        @keyframes neonFlicker {
            0% { box-shadow: 0 0 20px rgba(0, 217, 255, 0.3), inset 0 0 20px rgba(0, 217, 255, 0.1); }
            50% { box-shadow: 0 0 30px rgba(0, 217, 255, 0.5), inset 0 0 30px rgba(0, 217, 255, 0.2); }
            100% { box-shadow: 0 0 20px rgba(0, 217, 255, 0.3), inset 0 0 20px rgba(0, 217, 255, 0.1); }
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.02); }
        }

        .logo-icon img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            filter: drop-shadow(0 0 8px rgba(0, 217, 255, 0.4));
        }

        .logo-text {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .logo-text .main-title {
            font-size: 1.2rem;
            font-weight: 900;
            color: var(--primary);
            line-height: 1.2;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-family: 'Orbitron', sans-serif;
            text-shadow: 0 0 10px rgba(0, 217, 255, 0.5), 0 0 20px rgba(0, 217, 255, 0.3);
        }

        .logo-text .subtitle {
            font-size: 0.8rem;
            color: var(--secondary);
            font-weight: 600;
            letter-spacing: 0.6px;
            font-family: 'Space Mono', monospace;
        }

        .top-bar {
            display: flex;
            align-items: center;
            gap: 14px;
            margin-left: auto;
            animation: slideInRight 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
                filter: blur(0);
            }
        }

        .user-greeting {
            display: flex;
            align-items: center;
            padding: 11px 22px;
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.15), rgba(0, 255, 163, 0.05));
            border-radius: 10px;
            border: 1px solid var(--primary);
            margin-right: 12px;
            box-shadow: 0 0 15px rgba(0, 217, 255, 0.2);
            transition: all 0.3s ease;
        }

        .user-greeting:hover {
            box-shadow: 0 0 25px rgba(0, 217, 255, 0.4);
            border-color: var(--secondary);
        }

        .greeting-text {
            font-size: 1rem;
            font-weight: 700;
            color: var(--primary);
            letter-spacing: 0.3px;
            font-family: 'Orbitron', sans-serif;
        }

        .top-bar a, .top-bar details summary {
            color: var(--text-primary);
            text-decoration: none;
            padding: 11px 20px;
            font-size: 0.85rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.6px;
            cursor: pointer;
            border-radius: 8px;
            position: relative;
            transition: all 0.3s ease;
            border: 1px solid transparent;
            font-family: 'Space Mono', monospace;
        }

        .top-bar a:hover, .top-bar details summary:hover {
            color: var(--primary);
            border-color: var(--primary);
            box-shadow: 0 0 15px rgba(0, 217, 255, 0.3), inset 0 0 15px rgba(0, 217, 255, 0.1);
            transform: translateY(-2px);
        }

        .top-bar details {
            position: relative;
        }

        .top-bar details summary {
            list-style: none;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .top-bar details summary::after {
            content: '‚ñº';
            font-size: 0.6rem;
            margin-left: 6px;
            transition: transform 0.5s;
        }

        .top-bar details[open] summary::after {
            transform: rotate(180deg);
        }

        .top-bar details ul {
            position: absolute;
            top: calc(100% + 10px);
            left: 0;
            background: linear-gradient(135deg, rgba(10, 14, 39, 0.98), rgba(26, 26, 62, 0.98));
            backdrop-filter: blur(30px);
            box-shadow: 0 0 30px rgba(0, 217, 255, 0.3), inset 0 1px 0 rgba(0, 217, 255, 0.1);
            border-radius: 12px;
            min-width: 240px;
            overflow: hidden;
            list-style: none;
            padding: 12px 0;
            border: 1px solid var(--primary);
            z-index: 1001;
            animation: dropdownSlide 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        @keyframes dropdownSlide {
            from {
                opacity: 0;
                transform: translateY(-20px) scale(0.95);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
                filter: blur(0);
            }
        }

        .top-bar details ul li a {
            display: block;
            padding: 12px 24px;
            color: var(--text-primary);
            text-decoration: none;
            font-size: 0.85rem;
            text-transform: none;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

        .top-bar details ul li a::before {
            content: '';
            position: absolute;
            left: -100%;
            top: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 217, 255, 0.2), transparent);
            transition: left 0.4s ease;
            z-index: -1;
        }

        .top-bar details ul li a:hover {
            color: var(--primary);
            padding-left: 32px;
            transform: translateX(6px);
            box-shadow: inset 0 0 15px rgba(0, 217, 255, 0.1);
        }

        .top-bar details ul li a:hover::before {
            left: 100%;
        }

        .logout {
            background: linear-gradient(135deg, rgba(255, 0, 110, 0.2), rgba(255, 0, 110, 0.1)) !important;
            color: var(--accent) !important;
            padding: 11px 24px !important;
            border-radius: 8px;
            font-weight: 800;
            border: 1px solid var(--accent) !important;
            box-shadow: 0 0 15px rgba(255, 0, 110, 0.2) !important;
            transition: all 0.3s ease;
        }

        .logout:hover {
            box-shadow: 0 0 25px rgba(255, 0, 110, 0.4) !important;
            border-color: var(--accent) !important;
        }

        .top-bar > a[href="/login-admin"] {
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.15), rgba(0, 255, 163, 0.05)) !important;
            color: var(--secondary) !important;
            padding: 11px 24px !important;
            border-radius: 8px;
            font-weight: 800;
            border: 1px solid var(--secondary) !important;
            box-shadow: 0 0 15px rgba(0, 255, 163, 0.2) !important;
            transition: all 0.3s ease;
        }

        .top-bar > a[href="/login-admin"]:hover {
            box-shadow: 0 0 25px rgba(0, 255, 163, 0.4) !important;
            border-color: var(--secondary) !important;
        }

        .mobile-menu-toggle {
            display: none;
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.15), rgba(0, 255, 163, 0.05));
            border: 1px solid var(--primary);
            font-size: 1.8rem;
            color: var(--primary);
            cursor: pointer;
            padding: 12px 16px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 217, 255, 0.2);
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .mobile-menu-toggle:hover {
            transform: scale(1.1) rotate(90deg);
            box-shadow: 0 0 25px rgba(0, 217, 255, 0.4);
        }

        /* ==================== HERO SECTION ==================== */
        .hero-section {
            margin-top: 90px;
            height: 600px;
            background: linear-gradient(135deg, rgba(10, 14, 39, 0.6), rgba(26, 26, 62, 0.6)),
                        url('https://images.unsplash.com/photo-1505142468610-359e7d316be0?w=1200&h=600&fit=crop') center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .hero-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, 
                rgba(0, 217, 255, 0.2) 0%, 
                transparent 40%,
                transparent 60%,
                rgba(0, 255, 163, 0.15) 100%),
                radial-gradient(circle at center, rgba(10, 14, 39, 0.3), rgba(10, 14, 39, 0.8));
            animation: heroOverlayShift 10s ease-in-out infinite;
        }

        @keyframes heroOverlayShift {
            0%, 100% {
                opacity: 0.5;
            }
            50% {
                opacity: 0.7;
            }
        }

        .hero-content {
            position: relative;
            z-index: 2;
            animation: fadeInUp 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
                filter: blur(0);
            }
        }

        .hero-content h1 {
            font-size: clamp(2rem, 5vw, 3.5rem);
            font-weight: 900;
            margin-bottom: 15px;
            text-shadow: 0 0 20px rgba(0, 217, 255, 0.6), 0 0 40px rgba(0, 217, 255, 0.3);
            letter-spacing: 2px;
            font-family: 'Orbitron', sans-serif;
            animation: glitchText 3s ease-in-out infinite;
        }

        @keyframes glitchText {
            0%, 100% {
                text-shadow: 0 0 20px rgba(0, 217, 255, 0.6), 0 0 40px rgba(0, 217, 255, 0.3);
            }
            50% {
                text-shadow: 0 0 30px rgba(0, 217, 255, 0.8), 0 0 60px rgba(0, 217, 255, 0.5), 0 0 80px rgba(0, 255, 163, 0.3);
            }
        }

        .hero-content p {
            font-size: clamp(1rem, 2vw, 1.2rem);
            max-width: 800px;
            margin: 0 auto 40px;
            text-shadow: 0 0 15px rgba(0, 217, 255, 0.4);
            line-height: 1.6;
            color: var(--text-secondary);
            font-family: 'Space Mono', monospace;
        }

        .hero-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 14px 32px;
            border: 2px solid var(--primary);
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.1), rgba(0, 255, 163, 0.05));
            color: var(--primary);
            border-radius: 8px;
            cursor: pointer;
            font-weight: 700;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            position: relative;
            overflow: hidden;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 0 15px rgba(0, 217, 255, 0.3);
            font-family: 'Space Mono', monospace;
        }

        .btn::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.3), rgba(0, 255, 163, 0.2));
            z-index: -1;
            transform: translateX(-100%);
            transition: transform 0.4s ease;
        }

        .btn:hover::before {
            transform: translateX(0);
        }

        .btn:hover {
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 0 30px rgba(0, 217, 255, 0.6);
            border-color: var(--secondary);
        }

        .btn.secondary {
            border-color: var(--secondary);
            color: var(--secondary);
        }

        .btn.secondary::before {
            background: linear-gradient(135deg, rgba(0, 255, 163, 0.3), rgba(0, 217, 255, 0.2));
        }

        /* ==================== MAIN CONTENT ==================== */
        .container {
            padding: 60px 40px;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* ==================== STATS GRID ==================== */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 25px;
            margin-bottom: 60px;
            margin-top: -80px;
            position: relative;
            z-index: 10;
        }

        .stat-card {
            background: linear-gradient(135deg, rgba(0, 217, 255, 0.08), rgba(0, 255, 163, 0.04));
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 0 20px rgba(0, 217, 255, 0.2), inset 0 0 20px rgba(0, 217, 255, 0.05);
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
            text-align: center;
            animation: cardSlideUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) both;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, transparent 0%, rgba(0, 217, 255, 0.1) 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .stat-card:hover::before {
            opacity: 1;
        }

        @keyframes cardSlideUp {
            from {
                opacity: 0;
                transform: translateY(40px);
                filter: blur(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
                filter: blur(0);
            }
        }

        .stat-card:nth-child(1) { animation-delay: 0.1s; }
        .stat-card:nth-child(2) { animation-delay: 0.2s; }
        .stat-card:nth-child(3) { animation-delay: 0.3s; }
        .stat-card:nth-child(4) { animation-delay: 0.4s; }

        .stat-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 0 40px rgba(0, 217, 255, 0.4), inset 0 0 30px rgba(0, 217, 255, 0.1);
            border-color: var(--primary);
        }

        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
            animation: bounce 2s ease-in-out infinite;
        }

        .stat-icon:nth-child(odd) {
            animation-delay: 0s;
        }

        .stat-icon:nth-child(even) {
            animation-delay: 0.5s;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 800;
            color: var(--primary);
            margin-bottom: 5px;
            font-family: 'Orbitron', sans-serif;
            text-shadow: 0 0 15px rgba(0, 217, 255, 0.4);
        }

        .stat-label {
            font-size: 0.9rem;
            color: var(--text-secondary);
            font-weight: 600;
            font-family: 'Space Mono', monospace;
        }

