                        attribution: '¬© OpenStreetMap',
                        maxZoom: 19
                    }),
                    dark: L.tileLayer('https://tiles.stadiamaps.com/tiles/alidade_smooth_dark/{z}/{x}/{y}.png', {
                        attribution: '¬© Stadia Maps',
                        maxZoom: 19
                    })
                };

                this.baseLayers.satellite.addTo(this.map);
                this.loadGeoJSON();
            }

            loadGeoJSON() {
                if (this.geoJsonLayer) this.map.removeLayer(this.geoJsonLayer);

                if (typeof window.lamun25 !== 'undefined' && window.lamun25) {
                    this.geoJsonLayer = L.geoJSON(window.lamun25, {
                        style: {
                            fillColor: '#00d9ff',
                            fillOpacity: 0.7,
                            color: '#00ffa3',
                            weight: 2,
                            opacity: 1
                        },
                        onEachFeature: (feature, layer) => this.createFeaturePopup(feature, layer)
                    }).addTo(this.map);

                    if (this.geoJsonLayer.getBounds().isValid()) {
                        this.map.fitBounds(this.geoJsonLayer.getBounds(), { padding: [50, 50] });
                    }
                }
            }

            createFeaturePopup(feature, layer) {
                const props = feature.properties;
                const luas = props.Luasan ? props.Luasan.toFixed(2) : 'N/A';

                const popup = `
                    <div style="font-family: 'Space Mono', monospace; font-size: 12px; padding: 12px; width: 280px; color: #e0e0ff;">
