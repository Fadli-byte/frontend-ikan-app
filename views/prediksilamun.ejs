                            <tr><td><strong>Kelas:</strong></td><td style="text-align: right;">Kelas ${props.gridcode || 'N/A'}</td></tr>
                            <tr><td><strong>Luas:</strong></td><td style="text-align: right;"><strong>${luas} ha</strong></td></tr>
                        </table>
                    </div>
                `;

                layer.bindPopup(popup);
                layer.on('mouseover', () => this.highlightFeature(layer));
                layer.on('mouseout', () => this.resetFeatureStyle(layer));
            }

            highlightFeature(layer) {
                layer.setStyle({
                    fillOpacity: 0.9,
                    weight: 3,
                    color: '#ffffff'
                });
                layer.openPopup();
            }

            resetFeatureStyle(layer) {
                layer.setStyle({
                    fillOpacity: 0.7,
                    weight: 2,
                    color: '#00ffa3'
                });
            }

            setupLayerButtons() {
                document.querySelectorAll('.layer-btn').forEach(btn => {
                    btn.addEventListener('click', () => this.switchLayer(btn));
                });
            }

            switchLayer(btn) {
                const layer = btn.dataset.layer;
                Object.values(this.baseLayers).forEach(baseLayer => {
                    this.map.removeLayer(baseLayer);
                });

                this.baseLayers[layer].addTo(this.map);

                document.querySelectorAll('.layer-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
            }
        }

