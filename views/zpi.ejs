            background: linear-gradient(135deg, rgba(0, 180, 166, 0.08), rgba(0, 229, 208, 0.08));
            border-radius: 12px;
            border: 2px solid rgba(0, 180, 166, 0.3);
            margin-bottom: 15px;
        }

        .realtime-info h3 {
            font-size: 0.9rem;
            color: var(--primary);
            font-weight: 800;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .clock-display {
            font-size: 1.5rem;
            font-weight: 900;
            color: var(--text-primary);
            text-align: center;
            padding: 10px;
            background: rgba(0, 180, 166, 0.1);
            border-radius: 8px;
            margin-bottom: 10px;
            font-family: 'Courier New', monospace;
        }

        .info-pulau-tunda {
            padding: 15px;
            background: linear-gradient(135deg, rgba(0, 180, 166, 0.08), rgba(0, 229, 208, 0.08));
            border-radius: 12px;
            border: 2px solid rgba(0, 180, 166, 0.3);
            margin-bottom: 15px;
        }

        .info-pulau-tunda h3 {
            font-size: 1rem;
            color: var(--primary);
            font-weight: 800;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .info-pulau-tunda p {
            font-size: 0.8rem;
            line-height: 1.5;
            color: var(--text-secondary);
            margin: 5px 0;
        }

        /* ==================== BASEMAP CONTROL ==================== */
        .basemap-control {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
            background: white;
            padding: 15px 20px;
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
            border: 2px solid rgba(0, 180, 166, 0.3);
            max-width: 90%;
            animation: slideInFromBottom 0.5s ease;
        }

        [data-theme="dark"] .basemap-control {
            background: rgba(10, 17, 40, 0.95);
            border-color: rgba(0, 229, 208, 0.5);
        }

        .basemap-control h4 {
            font-size: 0.85rem;
            font-weight: 800;
            color: var(--text-primary);
            margin-bottom: 12px;
            text-align: center;
            border-bottom: 2px solid var(--primary);
            padding-bottom: 8px;
        }

        .basemap-content {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .basemap-thumbnails {
            display: flex;
            gap: 10px;
            flex-wrap: nowrap;
            overflow-x: auto;
            padding: 5px 0;
        }

        .basemap-thumb {
            min-width: 80px;
            width: 80px;
            height: 60px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 3px solid transparent;
            overflow: hidden;
            position: relative;
            flex-shrink: 0;
        }

        .basemap-thumb img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .basemap-thumb:hover {
            transform: scale(1.08);
            box-shadow: 0 6px 20px rgba(0, 180, 166, 0.4);
        }

        .basemap-thumb.active {
            border-color: var(--primary);
            box-shadow: 0 6px 25px rgba(0, 180, 166, 0.6);
        }

        .basemap-thumb-label {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            font-size: 0.65rem;
            font-weight: 700;
            padding: 3px;
            text-align: center;
            text-transform: uppercase;
        }

        .opacity-control-horizontal {
            display: flex;
            flex-direction: column;
            gap: 8px;
            min-width: 200px;
            padding-left: 15px;
            border-left: 2px solid rgba(0, 180, 166, 0.2);
        }

        .opacity-label {
            font-size: 0.75rem;
            font-weight: 700;
            color: var(--text-primary);
            display: flex;
            justify-content: space-between;
        }

        .opacity-slider {
            width: 100%;
            height: 6px;
            border-radius: 5px;
            background: linear-gradient(90deg, rgba(0, 180, 166, 0.2), var(--primary));
            outline: none;
            -webkit-appearance: none;
            cursor: pointer;
        }

        .opacity-slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background: var(--primary);
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(0, 180, 166, 0.5);
        }

        /* ==================== MAP & LEGEND ==================== */
        #map { 
            position: fixed;
            top: var(--header-height);
            left: var(--sidebar-width);
            width: calc(100% - var(--sidebar-width));
            height: calc(100vh - var(--header-height));
        }

        .leaflet-control.legend {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            border: 2px solid rgba(0, 180, 166, 0.3);
        }

        [data-theme="dark"] .leaflet-control.legend {
            background: rgba(10, 17, 40, 0.95);
            border-color: rgba(0, 229, 208, 0.5);
        }

        .legend h4 {
            margin: 0 0 12px 0;
            font-size: 14px;
            color: var(--text-primary);
            font-weight: 800;
            border-bottom: 2px solid var(--primary);
            padding-bottom: 8px;
        }

        .legend-item {
            margin: 10px 0;
            font-size: 12px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .legend-color {
            width: 30px;
            height: 20px;
            border: 2px solid #333;
            border-radius: 4px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        /* Fish Marker Icon - CYAN NEON dengan Glow Kuat */
        .fish-marker-icon { 
            animation: fishFloat 3s ease-in-out infinite;
            display: inline-block;
            filter: 
                drop-shadow(0 0 15px #00FFFF) 
                drop-shadow(0 0 25px #00FFFF) 
                drop-shadow(0 0 35px #00E5FF)
                brightness(1.3);
        }

        .fish-marker-icon:hover {
            filter: 
                drop-shadow(0 0 20px #00FFFF) 
                drop-shadow(0 0 35px #00FFFF) 
                drop-shadow(0 0 50px #00E5FF)
                brightness(1.5);
            transform: scale(1.3);
        }

        /* Custom Popup Styling */
        .leaflet-popup-content-wrapper {
            background: white;
            color: var(--text-primary);
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            border: 2px solid rgba(0, 180, 166, 0.3);
            font-family: 'Inter', sans-serif;
            padding: 0;
            overflow: hidden;
        }

        [data-theme="dark"] .leaflet-popup-content-wrapper {
            background: rgba(10, 17, 40, 0.98);
            border-color: rgba(0, 229, 208, 0.5);
        }

        .leaflet-popup-content {
            margin: 0;
            padding: 0;
        }

        .theme-toggle {
            position: fixed;
            top: 120px;
            right: 30px;
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #00b4a6, #006b8c);
            border: none;
            border-radius: 50%;
            cursor: pointer;
            z-index: 10000;
            box-shadow: 0 8px 25px rgba(0, 180, 166, 0.4);
            font-size: 1.8rem;
            transition: all 0.4s ease;
        }

        .theme-toggle:hover {
            transform: scale(1.15) rotate(180deg);
            box-shadow: 0 12px 35px rgba(0, 180, 166, 0.6);
        }

        @media (max-width: 768px) {
            .sidebar { transform: translateX(-100%); }
            .sidebar.show { transform: translateX(0); }
            #map { left: 0; width: 100%; }
            .basemap-content { flex-direction: column; }
            .opacity-control-horizontal {
                border-left: none;
                border-top: 2px solid rgba(0, 180, 166, 0.2);
                padding-left: 0;
                padding-top: 15px;
            }
        }
    </style>
</head>
