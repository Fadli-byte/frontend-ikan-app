    <style>
        :root {
            --primary: #00b4a6;
            --secondary: #006b8c;
            --accent: #00e5d0;
            --dark: #003d52;
            --bg-primary: #ffffff;
            --bg-secondary: rgba(224, 247, 245, 0.98);
            --text-primary: #333;
            --text-secondary: #555;
            --sidebar-width: 320px;
            --header-height: 100px;
        }

        [data-theme="dark"] {
            --bg-primary: #0a1128;
            --bg-secondary: rgba(10, 17, 40, 0.98);
            --text-primary: #e0e0e0;
            --text-secondary: #b0b0b0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            overflow-x: hidden;
            font-family: 'Inter', 'Segoe UI', sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            transition: background 0.5s ease, color 0.5s ease;
        }

        /* ==================== KEYFRAMES ==================== */
        @keyframes headerGlow {
            0%, 100% {
                background: linear-gradient(135deg, rgba(0, 180, 166, 0.95), rgba(0, 107, 140, 0.95));
                box-shadow: 
                    0 10px 40px rgba(0, 180, 166, 0.3),
                    inset 0 1px 0 rgba(255, 255, 255, 0.2),
                    0 0 25px rgba(0, 229, 208, 0.2);
            }
            50% {
                background: linear-gradient(135deg, rgba(0, 180, 166, 1), rgba(0, 107, 140, 1));
                box-shadow: 
                    0 10px 40px rgba(0, 180, 166, 0.5),
                    inset 0 1px 0 rgba(255, 255, 255, 0.3),
                    0 0 45px rgba(0, 229, 208, 0.4);
            }
        }

        @keyframes gradientFlow {
            0% { background-position: 0% 0%; }
            100% { background-position: 300% 0%; }
        }

        @keyframes logoEntrance {
            0% {
                opacity: 0;
                transform: translateX(-80px) scale(0.7) rotate(-15deg);
            }
            70% {
                transform: translateX(15px) scale(1.08) rotate(3deg);
            }
            100% {
                opacity: 1;
                transform: translateX(0) scale(1) rotate(0deg);
            }
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 0; }
            50% { transform: scale(1.2); opacity: 1; }
        }

        @keyframes fadeInRight {
            from {
                opacity: 0;
                transform: translateX(40px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes dropdownSlide {
            from {
                opacity: 0;
                transform: translateY(-20px) scale(0.95);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        @keyframes slideInFromTop {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes slideInFromBottom {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes popupFadeIn {
            0% { opacity: 0; transform: scale(0.8) translateY(-20px); }
            100% { opacity: 1; transform: scale(1) translateY(0); }
        }

        @keyframes fishFloat {
            0%, 100% { 
                transform: translateY(0px) scale(1);
                opacity: 1;
            }
            50% { 
                transform: translateY(-5px) scale(1.05);
                opacity: 0.95;
            }
        }

        /* ==================== HEADER ==================== */
        .header {
            position: fixed;
            top: 0;
            width: 100%;
            background: linear-gradient(135deg, rgba(0, 180, 166, 0.98), rgba(0, 107, 140, 0.98));
            backdrop-filter: blur(25px) saturate(200%);
            box-shadow: 
                0 10px 40px rgba(0, 180, 166, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
            z-index: 1000;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            border-bottom: 3px solid rgba(0, 229, 208, 0.5);
            animation: headerGlow 6s ease-in-out infinite;
        }

        [data-theme="dark"] .header {
            background: linear-gradient(135deg, rgba(0, 90, 80, 0.98), rgba(0, 65, 90, 0.98));
        }

        .header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, 
                #00e5d0 0%, 
                #ffffff 25%,
                #00e5d0 50%, 
                #ffffff 75%,
                #00e5d0 100%);
            background-size: 300% 100%;
            animation: gradientFlow 6s linear infinite;
            box-shadow: 0 0 15px rgba(0, 229, 208, 0.6);
        }

        .header-container {
            width: 100%;
            margin: 0;
            padding: 0 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 100px;
            position: relative;
            z-index: 1;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 18px;
            animation: logoEntrance 1s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .logo-icon {
            width: 90px;
            height: 90px;
            display: flex;
            align-items: center;
            justify-content: center;
            filter: drop-shadow(0 8px 20px rgba(255, 255, 255, 0.3));
        }

        .logo-icon::before {
            content: '';
            position: absolute;
            top: -10px;
            left: -10px;
            right: -10px;
            bottom: -10px;
            background: radial-gradient(circle, 
                rgba(255, 255, 255, 0.3) 0%, 
                transparent 70%);
            border-radius: 50%;
            opacity: 0;
            animation: pulse 3s ease-in-out infinite;
        }

        .logo-icon img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            filter: drop-shadow(0 4px 12px rgba(255, 255, 255, 0.5));
        }

        .logo-text {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .logo-text .main-title {
            font-size: 1.55rem;
            font-weight: 900;
            color: #ffffff;
            line-height: 1.2;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        }

        .logo-text .subtitle {
            font-size: 0.98rem;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 600;
            letter-spacing: 0.6px;
            text-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
        }

        .top-bar {
            display: flex;
            align-items: center;
            gap: 14px;
            margin-left: auto;
            animation: fadeInRight 1s cubic-bezier(0.4, 0, 0.2, 1) 0.3s both;
        }

        .user-greeting {
            display: flex;
            align-items: center;
            padding: 11px 22px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 28px;
            margin-right: 12px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .greeting-text {
            font-size: 1rem;
            font-weight: 700;
            color: #ffffff;
            letter-spacing: 0.3px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .top-bar a {
            color: #ffffff;
            text-decoration: none;
            padding: 11px 20px;
            font-size: 0.92rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.6px;
            border-radius: 12px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
            transition: all 0.4s ease;
        }

        .top-bar a:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        }

