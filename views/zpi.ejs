    <script>
        // Real-time clock
        function updateClock() {
            const now = new Date();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');
            document.getElementById('clockDisplay').textContent = `${hours}:${minutes}:${seconds}`;
        }
        setInterval(updateClock, 1000);
        updateClock();

        // Theme toggle
        const themeToggle = document.getElementById('themeToggle');
        const html = document.documentElement;
        const currentTheme = localStorage.getItem('theme') || 'light';
        
        html.setAttribute('data-theme', currentTheme);
        themeToggle.textContent = currentTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';

        themeToggle.addEventListener('click', () => {
            const theme = html.getAttribute('data-theme');
            const newTheme = theme === 'light' ? 'dark' : 'light';
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            themeToggle.textContent = newTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
        });

        // Map initialization
        const map = L.map('map').setView([-5.815, 106.2745], 15);

        const osmLayer = L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; OpenStreetMap'
        });

        const satelliteLayer = L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
            maxZoom: 19,
            attribution: '&copy; Esri'
        });

        const topoLayer = L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Topo_Map/MapServer/tile/{z}/{y}/{x}', {
            maxZoom: 19,
            attribution: '&copy; Esri'
        });

        const darkLayer = L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png', {
            maxZoom: 19,
            attribution: '&copy; CartoDB'
        });

        const positronLayer = L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
            maxZoom: 19,
            attribution: '&copy; CartoDB'
        });

        const voyagerLayer = L.tileLayer('https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png', {
            maxZoom: 19,
            attribution: '&copy; CartoDB'
        });

        let currentBaseLayer = satelliteLayer;
        currentBaseLayer.addTo(map);

        const basemapThumbs = document.querySelectorAll('.basemap-thumb');
        basemapThumbs.forEach(thumb => {
            thumb.addEventListener('click', function() {
                const basemapType = this.getAttribute('data-basemap');
                
                basemapThumbs.forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                
                map.removeLayer(currentBaseLayer);
                
                switch(basemapType) {
                    case 'osm': currentBaseLayer = osmLayer; break;
                    case 'satellite': currentBaseLayer = satelliteLayer; break;
                    case 'topo': currentBaseLayer = topoLayer; break;
                    case 'dark': currentBaseLayer = darkLayer; break;
                    case 'positron': currentBaseLayer = positronLayer; break;
                    case 'voyager': currentBaseLayer = voyagerLayer; break;
                }
                
                currentBaseLayer.addTo(map);
                const opacity = document.getElementById('opacitySlider').value / 100;
                currentBaseLayer.setOpacity(opacity);
            });
        });

        const opacitySlider = document.getElementById('opacitySlider');
        const opacityValue = document.getElementById('opacityValue');

        opacitySlider.addEventListener('input', function() {
            const opacity = this.value / 100;
            currentBaseLayer.setOpacity(opacity);
            opacityValue.textContent = this.value + '%';
        });

        // Function untuk SVG fish icon - CYAN NEON TERANG
        function createFishSVG(color = '#00FFFF') {  
            return `
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 60" width="45" height="28">
                    <!-- Badan Ikan - CYAN NEON -->
                    <ellipse cx="40" cy="30" rx="25" ry="15" fill="#00FFFF" opacity="1" stroke="#FFFFFF" stroke-width="2.5"/>
                    
                    <!-- Kepala - CYAN NEON -->
                    <circle cx="60" cy="30" r="10" fill="#00FFFF" opacity="1" stroke="#FFFFFF" stroke-width="2.5"/>
                    
                    <!-- Mata -->
                    <circle cx="63" cy="28" r="3" fill="white" stroke="#000" stroke-width="1"/>
                    <circle cx="63" cy="28" r="1.5" fill="#000"/>
                    
                    <!-- Sirip Punggung - CYAN NEON -->
                    <path d="M 40 15 L 45 5 L 50 15 Z" fill="#00FFFF" opacity="1" stroke="#FFFFFF" stroke-width="2"/>
                    
                    <!-- Sirip Ekor - CYAN NEON -->
                    <path d="M 15 20 L 5 10 L 12 30 L 5 50 L 15 40 Z" fill="#00FFFF" opacity="1" stroke="#FFFFFF" stroke-width="2"/>
                    
                    <!-- Sirip Perut - CYAN NEON -->
                    <path d="M 35 43 L 38 50 L 42 45 Z" fill="#00FFFF" opacity="1" stroke="#FFFFFF" stroke-width="2"/>
                    
                    <!-- Glow effect TERANG -->
                    <ellipse cx="40" cy="30" rx="28" ry="18" fill="none" stroke="#FFFFFF" stroke-width="2" opacity="0.8"/>
                </svg>
            `;
        }

        function getSPLColor(val) {
            return val <= 27 ? '#001f3f' :
                   val <= 28 ? '#0074D9' :
                   val <= 29 ? '#00FF00' :
                   val <= 29.5 ? '#FFFF00' :
                   val <= 31 ? '#FF6600' : '#FF0000';
        }

        function getKlorofilColor(val) {
            return val < 0.5 ? '#8B0000' :
                   val < 1.5 ? '#FF0000' :
                   val < 2.5 ? '#FFFF33' :
                   val < 4 ? '#39FF14' : '#39FF14';
        }

        function getZPIColor(kode) {
            switch(kode) {
                case 1: return '#FF0000';
                case 2: return '#FFC107';
                case 3: return '#FFC107';
                case 4: return '#39FF14';
                case 8: return '#FF0000';
                default: return '#808080';
            }
        }

        function calculateFishCount(feature) {
            if (feature.geometry.type === 'Polygon') {
                var coords = feature.geometry.coordinates[0];
                var area = Math.abs((coords.length - 1));
                
                if (feature.properties.gridcode === 8) {
                    if (area > 10) return 3;
                    if (area > 5) return 2;
                    return 1;
                }
            }
            return 1;
        }

        // SPL Layer
        L.geoJson(spl, {
            style: function(feature) {
                var val = feature.properties.spl ?? feature.properties.gridcode;
                return {
                    color: getSPLColor(val),
                    fillColor: getSPLColor(val),
                    fillOpacity: 0.6,
                    weight: 2
                };
            },
            onEachFeature: function(feature, layer) {
                var kode = feature.properties.spl ?? feature.properties.gridcode;
                layer.bindPopup(`
                    <div style="min-width: 240px; font-family: 'Inter', sans-serif; text-align: center;">
                        <strong style="font-size: 15px; color: #00b4a6;">üå°Ô∏è SPL (Sea Surface Temperature)</strong><br>
                        <strong style="color: #006b8c;">Pulau Tunda, Serang, Banten</strong><br><br>
                        <span style="font-size: 20px; color: #4dd0e1; font-weight: 700;">${kode}¬∞C</span>
                    </div>
                `);
            }
        }).addTo(map);

        // Klorofil Layer
        L.geoJson(klorofil, {
            style: function(feature) {
                var val = feature.properties.klorofil ?? feature.properties.gridcode;
                return {
                    color: getKlorofilColor(val),
                    fillColor: getKlorofilColor(val),
                    fillOpacity: 0.5,
                    weight: 2
                };
            },
            onEachFeature: function(feature, layer) {
                var kode = feature.properties.klorofil ?? feature.properties.gridcode;
                layer.bindPopup(`
                    <div style="min-width: 240px; font-family: 'Inter', sans-serif; text-align: center;">
                        <strong style="font-size: 15px; color: #00b4a6;">üåø Klorofil-a</strong><br>
                        <strong style="color: #006b8c;">Pulau Tunda, Serang, Banten</strong><br><br>
                        <span style="font-size: 20px; color: #00FF00; font-weight: 700;">${kode} mg/m¬≥</span>
                    </div>
                `);
            }
        }).addTo(map);

        // ZPI Layer
        L.geoJson(zpi, {
            style: function(feature) {
                if(feature.geometry.type === 'Polygon' || feature.geometry.type === 'MultiPolygon') {
                    var kode = feature.properties.gridcode;
                    return {
                        color: '#ffffff',
                        fillColor: getZPIColor(kode),
                        fillOpacity: 0.65,
                        weight: 2.5
                    };
                }
            },
            onEachFeature: function(feature, layer) {
                var potensi = feature.properties.kelas_zpi || '-';
                var kode = feature.properties.gridcode || '-';
                
                layer.bindPopup(`
                    <div style="min-width: 240px; font-family: 'Inter', sans-serif;">
                        <strong style="font-size: 15px; color: #00b4a6;">üé£ Zona Potensial Ikan</strong><br>
                        <strong style="color: #006b8c;">Pulau Tunda, Serang, Banten</strong><br><br>
                        <table style="font-size: 13px; width: 100%;">
                            <tr><td><strong>Grid:</strong></td><td>${kode}</td></tr>
                            <tr><td><strong>Kelas:</strong></td><td style="color: #00FFFF; font-weight: 700;">${potensi}</td></tr>
                        </table>
                    </div>
                `);

                if (feature.geometry.type === 'Polygon') {
                    var coords = feature.geometry.coordinates[0];
                    var fishCount = calculateFishCount(feature);
                    
                    var bounds = L.latLngBounds(
                        coords.map(coord => [coord[1], coord[0]])
                    );
                    
                    var latRange = bounds.getNorth() - bounds.getSouth();
                    var lngRange = bounds.getEast() - bounds.getWest();
                    
                    var cols = fishCount === 1 ? 1 : 2;
                    var rows = Math.ceil(fishCount / cols);
                    
                    for (let i = 0; i < fishCount; i++) {
                        var row = Math.floor(i / cols);
                        var col = i % cols;
                        
                        var lat = bounds.getNorth() - ((row + 0.5) * (latRange / (rows + 1)));
                        var lng = bounds.getWest() + ((col + 0.5) * (lngRange / (cols + 1)));
                        
                        // Icon CYAN NEON dengan Glow Super Terang
                        var fishIcon = L.divIcon({
                            html: `<div class="fish-marker-icon" style="filter: drop-shadow(0 0 15px #00FFFF) drop-shadow(0 0 25px #FFFFFF) brightness(1.4);">${createFishSVG('#00FFFF')}</div>`,
                            iconSize: [45, 28],
                            iconAnchor: [22, 14],
                            popupAnchor: [0, -14],
                            className: 'fish-icon'
                        });
                        
                        L.marker([lat, lng], {icon: fishIcon})
                            .bindPopup(`
                                <div style="min-width: 240px; font-family: 'Inter', sans-serif;">
                                    <strong style="font-size: 15px; color: #00b4a6;">üêü Lokasi Tangkapan #${i + 1}</strong><br>
                                    <strong style="color: #006b8c;">Pulau Tunda, Serang, Banten</strong><br><br>
                                    <table style="font-size: 13px; width: 100%;">
                                        <tr><td><strong>üìç Grid:</strong></td><td>${kode}</td></tr>
                                        <tr><td><strong>‚≠ê Potensi:</strong></td><td style="color: #00FFFF; font-weight: 700;">Sangat Tinggi</td></tr>
                                        <tr><td><strong>üìä Status:</strong></td><td style="color: #00FF00;">Aktif ‚úì</td></tr>
                                    </table>
                                    <p style="font-size: 12px; margin-top: 10px; color: #666;"><em>üíß Kondisi air optimal untuk penangkapan</em></p>
                                </div>
                            `)
                            .addTo(map);
                    }
                }
            }
        }).addTo(map);

        // Legend
        const legend = L.control({position: 'bottomleft'});
        legend.onAdd = function(map) {
            const div = L.DomUtil.create('div', 'legend leaflet-control');
            div.innerHTML = '<h4>üó∫Ô∏è LEGENDA PETA ZPI</h4>';
            
            div.innerHTML += '<div class="legend-item"><span class="legend-color" style="background:#001f3f"></span><span>SPL ‚â§27¬∞C</span></div>';
            div.innerHTML += '<div class="legend-item"><span class="legend-color" style="background:#0074D9"></span><span>SPL 27-28¬∞C</span></div>';
            div.innerHTML += '<div class="legend-item"><span class="legend-color" style="background:#00FF00"></span><span>SPL 28-29¬∞C</span></div>';
            div.innerHTML += '<div class="legend-item"><span class="legend-color" style="background:#8B0000"></span><span>Klorofil &lt;0.5</span></div>';
            div.innerHTML += '<div class="legend-item"><span class="legend-color" style="background:#FF0000"></span><span>Grid 1,8 (ZPI)</span></div>';
            div.innerHTML += '<div class="legend-item"><span class="legend-color" style="background:#FFC107"></span><span>Grid 2,3 (ZPI)</span></div>';
            div.innerHTML += '<div class="legend-item"><span class="legend-color" style="background:#39FF14"></span><span>Grid 4 (ZPI)</span></div>';
            div.innerHTML += '<div style="text-align: center; margin-top: 10px;"><span style="font-size: 28px; filter: drop-shadow(0 0 8px #00FFFF);">üêü</span><br><span style="font-size: 12px; color: #00FFFF; font-weight: 700;">Marker Ikan Cyan</span></div>';
            
            return div;
        };
        legend.addTo(map);

        L.control.scale({ metric: true, imperial: false, position: 'bottomleft' }).addTo(map);
    </script>

