                        <div class="search-dropdown-item active" data-year="2021" data-url="/mangrove2021">Tahun 2021</div>
                        <div class="search-dropdown-item" data-year="2022" data-url="/mangrove2022">Tahun 2022</div>
                        <div class="search-dropdown-item" data-year="2023" data-url="/mangrove2023">Tahun 2023</div>
                        <div class="search-dropdown-item" data-year="2024" data-url="/mangrove2024">Tahun 2024</div>
