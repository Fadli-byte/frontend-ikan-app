            <!-- Basemap Control (Horizontal) -->
            <div class="basemap-control">
                <h4>üó∫Ô∏è Pilih Peta Dasar & Atur Opacity</h4>
                <div class="basemap-content">
                    <div class="basemap-thumbnails">
                        <div class="basemap-thumb" data-basemap="osm" title="OpenStreetMap">
                            <img src="https://tile.openstreetmap.org/5/16/10.png" alt="OSM">
                            <div class="basemap-thumb-label">OSM</div>
                        </div>
                        <div class="basemap-thumb active" data-basemap="satellite" title="Satelit">
                            <img src="https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/5/10/16" alt="Satelit">
                            <div class="basemap-thumb-label">SATELIT</div>
                        </div>
                        <div class="basemap-thumb" data-basemap="topo" title="Topografi">
                            <img src="https://server.arcgisonline.com/ArcGIS/rest/services/World_Topo_Map/MapServer/tile/5/10/16" alt="Topo">
                            <div class="basemap-thumb-label">TOPO</div>
                        </div>
                        <div class="basemap-thumb" data-basemap="dark" title="Dark Mode">
                            <img src="https://a.basemaps.cartocdn.com/dark_all/5/16/10.png" alt="Dark">
                            <div class="basemap-thumb-label">DARK</div>
                        </div>
                        <div class="basemap-thumb" data-basemap="positron" title="Positron">
                            <img src="https://a.basemaps.cartocdn.com/light_all/5/16/10.png" alt="Positron">
                            <div class="basemap-thumb-label">LIGHT</div>
                        </div>
                        <div class="basemap-thumb" data-basemap="voyager" title="Voyager">
                            <img src="https://a.basemaps.cartocdn.com/rastertiles/voyager/5/16/10.png" alt="Voyager">
                            <div class="basemap-thumb-label">VOYAGER</div>
                        </div>
                    </div>
                    <div class="opacity-control-horizontal">
                        <div class="opacity-label">
                            <span>Opacity</span>
                            <span id="opacityValue">100%</span>
                        </div>
                        <div class="opacity-slider-wrapper">
                            <span style="font-size: 0.7rem; color: var(--text-secondary);">0%</span>
                            <input type="range" min="0" max="100" value="100" class="opacity-slider" id="opacitySlider">
                            <span style="font-size: 0.7rem; color: var(--text-secondary);">100%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="/js/mangrove21.js"></script>

        <script>
            // Header scroll
            const header = document.getElementById('header');
            window.addEventListener('scroll', () => {
                if (window.pageYOffset > 60) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });

            // Mobile menu toggle
            const menuToggle = document.getElementById('menuToggle');
            const topBar = document.getElementById('topBar');

            if (menuToggle && topBar) {
                menuToggle.addEventListener('click', (e) => {
                    e.stopPropagation();
                    topBar.classList.toggle('active');
                    menuToggle.textContent = topBar.classList.contains('active') ? '‚úï' : '‚ò∞';
                });
            }

            // Close dropdowns
            document.addEventListener('click', (e) => {
                document.querySelectorAll('details[open]').forEach(detail => {
                    if (!detail.contains(e.target)) {
                        detail.removeAttribute('open');
                    }
                });

                if (topBar && menuToggle && !topBar.contains(e.target) && !menuToggle.contains(e.target)) {
                    topBar.classList.remove('active');
                    menuToggle.textContent = '‚ò∞';
                }
            });

            // Auto-close other dropdowns
            document.querySelectorAll('details').forEach(detail => {
                detail.addEventListener('click', (e) => e.stopPropagation());
                detail.addEventListener('toggle', () => {
                    if (detail.open) {
                        document.querySelectorAll('details').forEach(other => {
                            if (other !== detail && other.open) other.removeAttribute('open');
                        });
                    }
                });
            });

            // Close mobile menu on link click
            document.querySelectorAll('.top-bar a').forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth <= 1024 && topBar) {
                        topBar.classList.remove('active');
                        if (menuToggle) menuToggle.textContent = '‚ò∞';
                    }
                });
            });

            // Real-time clock
            function updateClock() {
                const now = new Date();
                const hours = String(now.getHours()).padStart(2, '0');
                const minutes = String(now.getMinutes()).padStart(2, '0');
                const seconds = String(now.getSeconds()).padStart(2, '0');
                document.getElementById('clockDisplay').textContent = `${hours}:${minutes}:${seconds}`;
            }
            setInterval(updateClock, 1000);
            updateClock();

            // Real-time weather
            const API_KEY = 'YOUR_OPENWEATHERMAP_API_KEY';
            const LAT = -5.815;
            const LON = 106.2745;

            async function fetchWeather() {
                try {
                    const response = await fetch(
                        `https://api.openweathermap.org/data/2.5/weather?lat=${LAT}&lon=${LON}&appid=${API_KEY}&units=metric&lang=id`
                    );
                    const data = await response.json();
                    
                    if (data.main) {
                        document.getElementById('temperature').textContent = `${Math.round(data.main.temp)} ¬∞C`;
                        document.getElementById('weatherDesc').textContent = data.weather[0].description;
                        document.getElementById('humidity').textContent = `${data.main.humidity} %`;
                        document.getElementById('windSpeed').textContent = `${data.wind.speed} m/s`;
                    }
                } catch (error) {
                    document.getElementById('temperature').textContent = '28 ¬∞C';
                    document.getElementById('weatherDesc').textContent = 'Cerah';
                    document.getElementById('humidity').textContent = '75 %';
                    document.getElementById('windSpeed').textContent = '3.5 m/s';
                }
            }
            fetchWeather();
            setInterval(fetchWeather, 600000);

            // Rain drops
            function createRaindrops() {
                const rainContainer = document.querySelector('.rain-overlay');
                const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
                
                if (isDark && rainContainer) {
                    for (let i = 0; i < 50; i++) {
                        const drop = document.createElement('div');
                        drop.className = 'raindrop';
                        drop.style.left = Math.random() * 100 + '%';
                        drop.style.animationDuration = (Math.random() * 0.5 + 0.5) + 's';
                        drop.style.animationDelay = Math.random() * 2 + 's';
                        rainContainer.appendChild(drop);
                    }
                }
            }

            // Popup notification
            function showNotification(title, message) {
                document.getElementById('popupTitle').textContent = title;
                document.getElementById('popupMessage').textContent = message;
                document.getElementById('notificationPopup').classList.add('show');
                document.getElementById('popupOverlay').classList.add('show');
            }

            function closePopup() {
                document.getElementById('notificationPopup').classList.remove('show');
                document.getElementById('popupOverlay').classList.remove('show');
            }

            document.getElementById('popupOverlay').addEventListener('click', closePopup);

            // Loading indicator
            function showLoading(year) {
                document.getElementById('loadingYear').textContent = year;
                document.getElementById('loadingOverlay').classList.add('show');
            }

            function hideLoading() {
                document.getElementById('loadingOverlay').classList.remove('show');
            }

            // Theme toggle
            const themeToggle = document.getElementById('themeToggle');
            const html = document.documentElement;
            const currentTheme = localStorage.getItem('theme') || 'light';
            
            html.setAttribute('data-theme', currentTheme);
            themeToggle.textContent = currentTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
            
            if (currentTheme === 'dark') {
                createRaindrops();
            }

            themeToggle.addEventListener('click', () => {
                const theme = html.getAttribute('data-theme');
                const newTheme = theme === 'light' ? 'dark' : 'light';
                html.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                themeToggle.textContent = newTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
                
                const rainContainer = document.querySelector('.rain-overlay');
                rainContainer.innerHTML = '';
                if (newTheme === 'dark') {
                    createRaindrops();
                }
            });

            // Search dropdown
            const searchDropdownButton = document.getElementById('searchDropdownButton');
            const searchDropdownMenu = document.getElementById('searchDropdownMenu');
            const searchInput = document.getElementById('searchInput');
            const searchDropdownItems = document.querySelectorAll('.search-dropdown-item');
            const selectedYearSpan = document.getElementById('selectedYear');
            const infoYear = document.getElementById('infoYear');

            searchDropdownButton.addEventListener('click', (e) => {
                e.stopPropagation();
                searchDropdownButton.classList.toggle('active');
                searchDropdownMenu.classList.toggle('show');
            });

            document.addEventListener('click', (e) => {
                if (!searchDropdownButton.contains(e.target) && !searchDropdownMenu.contains(e.target)) {
                    searchDropdownButton.classList.remove('active');
                    searchDropdownMenu.classList.remove('show');
                }
            });

            searchInput.addEventListener('input', function() {
                const filter = this.value.toLowerCase();
                searchDropdownItems.forEach(item => {
                    const text = item.textContent.toLowerCase();
                    item.style.display = text.includes(filter) ? 'block' : 'none';
                });
            });

            searchDropdownItems.forEach(item => {
                item.addEventListener('click', function() {
                    const year = this.getAttribute('data-year');
                    const url = this.getAttribute('data-url');
                    
                    searchDropdownItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                    
                    selectedYearSpan.textContent = `Tahun ${year}`;
                    infoYear.textContent = year;
                    
                    searchDropdownButton.classList.remove('active');
                    searchDropdownMenu.classList.remove('show');
                    
                    showLoading(year);
                    
                    setTimeout(() => {
                        window.location.href = url;
                    }, 1500);
                });
            });

            // Mobile sidebar toggle
            const mobileToggle = document.getElementById('mobileToggle');
            const sidebar = document.getElementById('sidebar');

            mobileToggle.addEventListener('click', () => {
                sidebar.classList.toggle('show');
            });

            // Map initialization
            let geojsonData = null;
            if (typeof mangrove21 !== 'undefined') {
                geojsonData = mangrove21;
            } else if (typeof mangrove21 !== 'undefined') {
                geojsonData = mangrove21;
            }

            const map = L.map('map').setView([-5.815, 106.2745], 14);

            const osmLayer = L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; OpenStreetMap'
            });

            const satelliteLayer = L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
                maxZoom: 19,
                attribution: '&copy; Esri'
            });

            const topoLayer = L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Topo_Map/MapServer/tile/{z}/{y}/{x}', {
                maxZoom: 19,
                attribution: '&copy; Esri'
            });

            const darkLayer = L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png', {
                maxZoom: 19,
                attribution: '&copy; CartoDB'
            });

            const positronLayer = L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
                maxZoom: 19,
                attribution: '&copy; CartoDB',
                subdomains: 'abcd'
            });

            const voyagerLayer = L.tileLayer('https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png', {
                maxZoom: 19,
                attribution: '&copy; CartoDB',
                subdomains: 'abcd'
            });

            let currentBaseLayer = satelliteLayer;
            currentBaseLayer.addTo(map);

            const basemapThumbs = document.querySelectorAll('.basemap-thumb');
            basemapThumbs.forEach(thumb => {
                thumb.addEventListener('click', function() {
                    const basemapType = this.getAttribute('data-basemap');
                    
                    basemapThumbs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    map.removeLayer(currentBaseLayer);
                    
                    switch(basemapType) {
                        case 'osm': currentBaseLayer = osmLayer; break;
                        case 'satellite': currentBaseLayer = satelliteLayer; break;
                        case 'topo': currentBaseLayer = topoLayer; break;
                        case 'dark': currentBaseLayer = darkLayer; break;
                        case 'positron': currentBaseLayer = positronLayer; break;
                        case 'voyager': currentBaseLayer = voyagerLayer; break;
                    }
                    
                    currentBaseLayer.addTo(map);
                    const opacity = document.getElementById('opacitySlider').value / 100;
                    currentBaseLayer.setOpacity(opacity);
                });
            });

            const opacitySlider = document.getElementById('opacitySlider');
            const opacityValue = document.getElementById('opacityValue');

            opacitySlider.addEventListener('input', function() {
                const opacity = this.value / 100;
                currentBaseLayer.setOpacity(opacity);
                opacityValue.textContent = this.value + '%';
            });

           
            function getColor(gridcode) {
    switch (gridcode) {
        case 1: return '#1a9850'; // hijau (slope rendah) [web:56]
        case 2: return '#66bd63'; // hijau agak muda [web:56]
        case 3: return '#fdae61'; // kuning-oranye tengah [web:56]
        case 4: return '#f46d43'; // oranye-kemerahan [web:56]
        case 5: return '#d73027'; // merah (slope tinggi) [web:56]
        default: return '#f0f0f0'; // abu netral [web:58]
    }
}

function getKategori(gridcode) {
                switch (gridcode) {
                    case 1: return 'non vegetasi';
                    case 2: return 'vegetasi sangat rendah';
                    case 3: return 'vegetasi rendah';
                    case 4: return ' vegetasi sedang';
                    case 5: return 'vegetasi tinggi';
                    default: return 'Tidak Terklasifikasi';
                }
            }

            function getDeskripsi(gridcode) {
                switch (gridcode) {
                    case 1: return 'Kondisi yang kemungkinan besar non vegetasi berdasarkan algoritma SAVI';
                    case 2: return 'Kondisi yang kemungkinan besar vegetasi sangat rendah berdasarkan algoritma SAVI';
                    case 3: return 'Kondisi yang kemungkinan besar vegetasi rendah berdasarkan algoritma SAVI';
                    case 4: return 'Kondisi yang kemungkinan besar vegetasi sedang berdasarkan algoritma SAVI';
                    case 5: return 'Kondisi yang kemungkinan besar vegetasi tinggi berdasarkan algoritma SAVI';
                    default: return 'Data belum memiliki klasifikasi';
                }
            }

            if (geojsonData && geojsonData.features && geojsonData.features.length > 0) {
                try {
                    const layerGeoJson = L.geoJSON(geojsonData, {
                        style: function(feature) {
                            const gridcode = feature.properties.gridcode;
                            return {
                                color: getColor(gridcode),
                                weight: 2,
                                fillColor: getColor(gridcode),
                                fillOpacity: 0.6,
                                opacity: 0.8
                            };
                        },
                        onEachFeature: function(feature, layer) {
                            const gridcode = feature.properties.gridcode;
                            const kategori = getKategori(gridcode);
                            const deskripsi = getDeskripsi(gridcode);
                            
                            layer.bindPopup(`
                                <div style="min-width: 240px; font-family: 'Inter', sans-serif;">
                                    <strong style="font-size: 15px; color: #00b4a6;">Mangrove Pulau Tunda 2021</strong><br>
                                    <strong style="color: #006b8c;">Pulau Tunda, Serang, Banten</strong><br><br>
                                    <table style="font-size: 13px; width: 100%;">
                                        <tr><td><strong>ID:</strong></td><td>${feature.properties.Id}</td></tr>
                                        <tr><td><strong>Gridcode:</strong></td><td>${gridcode}</td></tr>
                                        <tr><td><strong>Kategori:</strong></td><td>${kategori}</td></tr>
                                    </table>
                                    <p style="font-size: 12px; margin-top: 10px; color: #666; line-height: 1.5;"><em>${deskripsi}</em></p>
                                </div>
                            `);

                            layer.on('mouseover', function() {
                                this.setStyle({ weight: 4, fillOpacity: 0.8 });
                            });

                            layer.on('mouseout', function() {
                                layerGeoJson.resetStyle(this);
                            });
                        }
                    }).addTo(map);

                    const bounds = layerGeoJson.getBounds();
                    if (bounds.isValid()) {
                        map.fitBounds(bounds, { padding: [50, 50], maxZoom: 15 });
                    }

                    const legend = L.control({position: 'bottomleft'});
                    
                    legend.onAdd = function(map) {
                        const div = L.DomUtil.create('div', 'legend leaflet-control');
                        const grades = [1, 2, 3, 4, 5];
                        const labels = [
                            'non vegetasi',
                            'vegetasi sangat rendah',
                            'vegetasi rendah',
                            'vegetasi sedang',
                            'vegetasi tinggi',
                        ];
                        
                        div.innerHTML = '<h4>üìä Legenda 2021</h4>';
                        
                        for (let i = 0; i < grades.length; i++) {
                            div.innerHTML += 
                                '<div class="legend-item">' +
                                '<span class="legend-color" style="background:' + getColor(grades[i]) + '"></span>' +
                                '<span>' + labels[i] + '</span>' +
                                '</div>';
                        }
                        
                        return div;
                    };
                    
                    legend.addTo(map);

                    L.control.scale({ metric: true, imperial: false, position: 'bottomleft' }).addTo(map);

                } catch (error) {
                    console.error('‚ùå Error:', error);
                }
            }
        </script>

