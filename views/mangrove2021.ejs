                    <div class="search-dropdown-menu" id="searchDropdownMenu">
                        <div class="search-input-wrapper">
                            <input type="text" id="searchInput" placeholder="Cari tahun...">
                        </div>
                       <div class="search-dropdown-item" data-year="2019" data-url="/mangrove2019">Tahun 2019</div>
