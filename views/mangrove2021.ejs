    <!DOCTYPE html>
    <html lang="id">
    <head>
        <base target="_top">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Peta Mangrove - Pulau Tunda</title>
        
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" 
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" 
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
        
        <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700;900&family=Inter:wght@300;400;600;700;800;900&display=swap" rel="stylesheet">
        
        <style>
            :root {
                --primary: #00b4a6;
                --secondary: #006b8c;
                --accent: #00e5d0;
                --dark: #003d52;
                --bg-primary: #ffffff;
                --bg-secondary: rgba(224, 247, 245, 0.98);
                --text-primary: #333;
                --text-secondary: #555;
                --sidebar-width: 320px;
                --header-height: 100px;
            }

            [data-theme="dark"] {
                --bg-primary: #0a1128;
                --bg-secondary: rgba(10, 17, 40, 0.98);
                --text-primary: #e0e0e0;
                --text-secondary: #b0b0b0;
            }

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            html, body {
                width: 100%;
                overflow-x: hidden;
                font-family: 'Inter', 'Segoe UI', sans-serif;
                background: var(--bg-primary);
                color: var(--text-primary);
                transition: background 0.5s ease, color 0.5s ease;
            }

            /* ==================== KEYFRAMES ==================== */
            @keyframes headerGlow {
                0%, 100% {
                    background: linear-gradient(135deg, rgba(0, 180, 166, 0.95), rgba(0, 107, 140, 0.95));
                    box-shadow: 
                        0 10px 40px rgba(0, 180, 166, 0.3),
                        inset 0 1px 0 rgba(255, 255, 255, 0.2),
                        0 0 25px rgba(0, 229, 208, 0.2);
                }
                50% {
                    background: linear-gradient(135deg, rgba(0, 180, 166, 1), rgba(0, 107, 140, 1));
                    box-shadow: 
                        0 10px 40px rgba(0, 180, 166, 0.5),
                        inset 0 1px 0 rgba(255, 255, 255, 0.3),
                        0 0 45px rgba(0, 229, 208, 0.4);
                }
            }

            @keyframes gradientFlow {
                0% { background-position: 0% 0%; }
                100% { background-position: 300% 0%; }
            }

            @keyframes logoEntrance {
                0% {
                    opacity: 0;
                    transform: translateX(-80px) scale(0.7) rotate(-15deg);
                }
                70% {
                    transform: translateX(15px) scale(1.08) rotate(3deg);
                }
                100% {
                    opacity: 1;
                    transform: translateX(0) scale(1) rotate(0deg);
                }
            }

            @keyframes pulse {
                0%, 100% { transform: scale(1); opacity: 0; }
                50% { transform: scale(1.2); opacity: 1; }
            }

            @keyframes fadeInRight {
                from {
                    opacity: 0;
                    transform: translateX(40px);
                }
                to {
                    opacity: 1;
                    transform: translateX(0);
                }
            }

            @keyframes dropdownSlide {
                from {
                    opacity: 0;
                    transform: translateY(-20px) scale(0.95);
                }
                to {
                    opacity: 1;
                    transform: translateY(0) scale(1);
                }
            }

            @keyframes slideInFromTop {
                from { opacity: 0; transform: translateY(-30px); }
                to { opacity: 1; transform: translateY(0); }
            }

            @keyframes slideInFromBottom {
                from { opacity: 0; transform: translateY(30px); }
                to { opacity: 1; transform: translateY(0); }
            }

            @keyframes popupFadeIn {
                0% { opacity: 0; transform: scale(0.8) translateY(-20px); }
                100% { opacity: 1; transform: scale(1) translateY(0); }
            }

            @keyframes loadingSpinner {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
            }

            @keyframes rain {
                0% { background-position: 0% 0%; opacity: 0.6; }
                100% { background-position: 10% 100%; opacity: 0.8; }
            }

            @keyframes lightning {
                0%, 10%, 20%, 30%, 100% { filter: hue-rotate(0deg) brightness(1); opacity: 0; }
                5%, 15%, 25% { filter: hue-rotate(240deg) brightness(2); opacity: 0.3; }
            }

            @keyframes thunderFlash {
                0%, 90%, 100% { background: transparent; }
                92%, 96% { background: rgba(255, 255, 255, 0.1); box-shadow: 0 0 100px rgba(135, 206, 250, 0.5); }
            }

            @keyframes raindrop {
                0% { transform: translateY(-100vh); opacity: 1; }
                100% { transform: translateY(100vh); opacity: 0.3; }
            }

            @keyframes logoSpin {
                0% { transform: rotate(0deg) scale(1); }
                50% { transform: rotate(180deg) scale(1.15); }
                100% { transform: rotate(360deg) scale(1); }
            }

            @keyframes logoPulse {
                0%, 100% { filter: drop-shadow(0 10px 30px rgba(0, 229, 208, 0.6)) brightness(1); }
                50% { filter: drop-shadow(0 15px 50px rgba(0, 229, 208, 1)) brightness(1.3); }
            }

            @keyframes textGlow {
                0%, 100% { text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3); }
                50% { text-shadow: 0 2px 20px rgba(0, 229, 208, 0.8), 0 0 30px rgba(255, 255, 255, 0.5); }
            }

            @keyframes loadingDots {
                0%, 20% { content: '.'; }
                40% { content: '..'; }
                60%, 100% { content: '...'; }
            }

            /* ==================== RAIN & LIGHTNING ==================== */
            .rain-overlay {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                pointer-events: none;
                z-index: 5;
                display: none;
            }

            [data-theme="dark"] .rain-overlay { display: block; }

            .rain-overlay::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: linear-gradient(transparent 0%, rgba(135, 206, 250, 0.05) 10%, transparent 100%);
                background-size: 2px 100px;
                animation: rain 0.3s linear infinite;
            }

            .rain-overlay::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                animation: thunderFlash 8s infinite;
            }

            .lightning-flash {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                pointer-events: none;
                z-index: 4;
                animation: lightning 10s infinite;
                display: none;
            }

            [data-theme="dark"] .lightning-flash { display: block; }

            .raindrop {
                position: fixed;
                width: 2px;
                height: 50px;
                background: linear-gradient(transparent, rgba(135, 206, 250, 0.6));
                animation: raindrop 1s linear infinite;
                opacity: 0.6;
            }

            /* ==================== HEADER (WARNA LEBIH JELAS) ==================== */
            .header {
                position: fixed;
                top: 0;
                width: 100%;
                background: linear-gradient(135deg, rgba(0, 180, 166, 0.98), rgba(0, 107, 140, 0.98));
                backdrop-filter: blur(25px) saturate(200%);
                box-shadow: 
                    0 10px 40px rgba(0, 180, 166, 0.3),
                    inset 0 1px 0 rgba(255, 255, 255, 0.2);
                z-index: 1000;
                transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
                border-bottom: 3px solid rgba(0, 229, 208, 0.5);
                animation: headerGlow 6s ease-in-out infinite;
            }

            [data-theme="dark"] .header {
                background: linear-gradient(135deg, rgba(0, 90, 80, 0.98), rgba(0, 65, 90, 0.98));
            }

            .header.scrolled {
                background: linear-gradient(135deg, rgba(0, 180, 166, 0.95), rgba(0, 107, 140, 0.95));
                backdrop-filter: blur(30px) saturate(220%);
            }

            .header::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 4px;
                background: linear-gradient(90deg, 
                    #00e5d0 0%, 
                    #ffffff 25%,
                    #00e5d0 50%, 
                    #ffffff 75%,
                    #00e5d0 100%);
                background-size: 300% 100%;
                animation: gradientFlow 6s linear infinite;
                box-shadow: 0 0 15px rgba(0, 229, 208, 0.6);
            }

            .header-container {
                width: 100%;
                margin: 0;
                padding: 0 40px;
                display: flex;
                align-items: center;
                justify-content: space-between;
                height: 100px;
                position: relative;
                z-index: 1;
                transition: height 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .header.scrolled .header-container {
                height: 80px;
            }

            .logo-section {
                display: flex;
                align-items: center;
                gap: 18px;
                animation: logoEntrance 1s cubic-bezier(0.34, 1.56, 0.64, 1);
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
                padding: 8px 12px 8px 0;
            }

            .logo-section:hover {
                transform: scale(1.05) translateY(-3px);
                filter: drop-shadow(0 10px 25px rgba(255, 255, 255, 0.3));
            }

            .logo-icon {
                width: 90px;
                height: 90px;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
                position: relative;
                filter: drop-shadow(0 8px 20px rgba(255, 255, 255, 0.3));
            }

            .header.scrolled .logo-icon {
                width: 75px;
                height: 75px;
            }

            .logo-icon::before {
                content: '';
                position: absolute;
                top: -10px;
                left: -10px;
                right: -10px;
                bottom: -10px;
                background: radial-gradient(circle, 
                    rgba(255, 255, 255, 0.3) 0%, 
                    transparent 70%);
                border-radius: 50%;
                opacity: 0;
                transition: opacity 0.5s ease;
                animation: pulse 3s ease-in-out infinite;
            }

            .logo-icon:hover::before {
                opacity: 1;
            }

            .logo-icon img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                position: relative;
                z-index: 1;
                transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
                filter: drop-shadow(0 4px 12px rgba(255, 255, 255, 0.5));
            }

            .logo-icon:hover img {
                transform: scale(1.1) rotate(5deg);
                filter: drop-shadow(0 8px 25px rgba(255, 255, 255, 0.7));
            }

            .logo-text {
                display: flex;
                flex-direction: column;
                gap: 4px;
            }

            .logo-text .main-title {
                font-size: 1.55rem;
                font-weight: 900;
                color: #ffffff;
                line-height: 1.2;
                text-transform: uppercase;
                letter-spacing: 0.8px;
                transition: all 0.4s ease;
                text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            }

            .header.scrolled .logo-text .main-title {
                font-size: 1.35rem;
            }

            .logo-text .subtitle {
                font-size: 0.98rem;
                color: rgba(255, 255, 255, 0.9);
                font-weight: 600;
                letter-spacing: 0.6px;
                transition: all 0.4s ease;
                text-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
            }

            .header.scrolled .logo-text .subtitle {
                font-size: 0.85rem;
            }

            .logo-section:hover .subtitle {
                color: #ffffff;
                transform: translateX(3px);
            }

            .top-bar {
                display: flex;
                align-items: center;
                gap: 14px;
                margin-left: auto;
                animation: fadeInRight 1s cubic-bezier(0.4, 0, 0.2, 1) 0.3s both;
            }

            .user-greeting {
                display: flex;
                align-items: center;
                padding: 11px 22px;
                background: rgba(255, 255, 255, 0.2);
                border-radius: 28px;
                margin-right: 12px;
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
                border: 2px solid rgba(255, 255, 255, 0.3);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

            .user-greeting:hover {
                background: rgba(255, 255, 255, 0.3);
                border-color: rgba(255, 255, 255, 0.5);
                transform: translateY(-2px) scale(1.04);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            }

            .greeting-text {
                font-size: 1rem;
                font-weight: 700;
                color: #ffffff;
                letter-spacing: 0.3px;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
            }

            .top-bar a,
            .top-bar details summary {
                color: #ffffff;
                text-decoration: none;
                padding: 11px 20px;
                font-size: 0.92rem;
                font-weight: 700;
                text-transform: uppercase;
                letter-spacing: 0.6px;
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
                cursor: pointer;
                border-radius: 12px;
                position: relative;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
            }

            .top-bar a:hover,
            .top-bar details summary:hover {
                color: #ffffff;
                background: rgba(255, 255, 255, 0.2);
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
            }

            .top-bar details {
                position: relative;
            }

            .top-bar details summary {
                list-style: none;
                display: flex;
                align-items: center;
                gap: 6px;
            }

            .top-bar details summary::after {
                content: '‚ñº';
                font-size: 0.7rem;
                margin-left: 6px;
                transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
            }

            .top-bar details[open] summary::after {
                transform: rotate(180deg);
            }

            .top-bar details ul {
                position: absolute;
                top: calc(100% + 10px);
                left: 0;
                right: auto;
                background: rgba(255, 255, 255, 0.98);
                backdrop-filter: blur(25px) saturate(200%);
                box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
                border-radius: 18px;
                min-width: 240px;
                margin-top: 0;
                overflow: hidden;
                list-style: none;
                padding: 14px 0;
                animation: dropdownSlide 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
                border: 2px solid rgba(0, 180, 166, 0.3);
                z-index: 1001;
            }

            [data-theme="dark"] .top-bar details ul {
                background: rgba(10, 17, 40, 0.98);
            }

            .top-bar details ul li a {
                display: block;
                padding: 13px 24px;
                color: var(--text-primary);
                text-decoration: none;
                font-size: 0.92rem;
                text-transform: none;
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
                text-shadow: none;
            }

            .top-bar details ul li a:hover {
                background: linear-gradient(90deg, #00b4a6, #006b8c);
                color: white;
                padding-left: 36px;
                transform: translateX(6px);
            }

            .logout {
                background: linear-gradient(135deg, #dc3545, #c82333) !important;
                color: white !important;
                padding: 11px 24px !important;
                border-radius: 28px;
                font-weight: 800;
                box-shadow: 0 6px 20px rgba(220, 53, 69, 0.5);
            }

            .logout:hover {
                background: linear-gradient(135deg, #c82333, #a71d2a) !important;
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0 10px 30px rgba(220, 53, 69, 0.7);
            }

            .top-bar > a[href="/login-admin"] {
                background: rgba(255, 255, 255, 0.2) !important;
                color: white !important;
                padding: 11px 24px !important;
                border-radius: 28px;
                font-weight: 800;
                border: 2px solid rgba(255, 255, 255, 0.3);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
            }

            .top-bar > a[href="/login-admin"]:hover {
                background: rgba(255, 255, 255, 0.3) !important;
                border-color: rgba(255, 255, 255, 0.5);
                transform: translateY(-3px) scale(1.05);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            }

            .mobile-menu-toggle {
                display: none;
                background: rgba(255, 255, 255, 0.2);
                border: 2px solid rgba(255, 255, 255, 0.3);
                font-size: 1.8rem;
                color: white;
                cursor: pointer;
                padding: 12px 16px;
                border-radius: 12px;
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .mobile-menu-toggle:hover {
                transform: scale(1.1) rotate(90deg);
                background: rgba(255, 255, 255, 0.3);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            }

            /* ==================== SIDEBAR ==================== */
            .sidebar {
                position: fixed;
                top: var(--header-height);
                left: 0;
                width: var(--sidebar-width);
                height: calc(100vh - var(--header-height));
                background: white;
                box-shadow: 4px 0 15px rgba(0, 0, 0, 0.1);
                z-index: 999;
                overflow-y: auto;
                transition: transform 0.3s ease;
            }

            [data-theme="dark"] .sidebar {
                background: rgba(10, 17, 40, 0.98);
                border-right: 2px solid rgba(0, 229, 208, 0.3);
            }

            .sidebar-content {
                padding: 20px;
            }

            .sidebar-section {
                margin-bottom: 25px;
            }

            .sidebar-section-title {
                font-size: 0.75rem;
                font-weight: 800;
                color: #999;
                text-transform: uppercase;
                letter-spacing: 1px;
                margin-bottom: 12px;
                padding: 0 10px;
            }

            .menu-item {
                display: flex;
                align-items: center;
                gap: 15px;
                padding: 14px 15px;
                margin-bottom: 6px;
                border-radius: 10px;
                cursor: pointer;
                transition: all 0.3s ease;
                color: var(--text-primary);
                font-size: 0.95rem;
                font-weight: 600;
                text-decoration: none;
            }

            .menu-item:hover {
                background: linear-gradient(135deg, rgba(0, 180, 166, 0.1), rgba(0, 229, 208, 0.1));
                color: var(--primary);
                transform: translateX(5px);
            }

            .menu-item.active {
                background: linear-gradient(135deg, var(--primary), var(--secondary));
                color: white;
                box-shadow: 0 4px 15px rgba(0, 180, 166, 0.3);
            }

            .menu-icon {
                font-size: 20px;
                width: 24px;
                text-align: center;
            }

            .info-pulau-tunda {
                padding: 15px;
                background: linear-gradient(135deg, rgba(0, 180, 166, 0.08), rgba(0, 229, 208, 0.08));
                border-radius: 12px;
                border: 2px solid rgba(0, 180, 166, 0.3);
                margin-bottom: 15px;
            }

            .info-pulau-tunda h3 {
                font-size: 1rem;
                color: var(--primary);
                font-weight: 800;
                margin-bottom: 10px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .info-pulau-tunda p {
                font-size: 0.8rem;
                line-height: 1.5;
                color: var(--text-secondary);
                margin: 5px 0;
            }

            .info-pulau-tunda strong {
                color: var(--text-primary);
            }

            .realtime-info {
                padding: 15px;
                background: linear-gradient(135deg, rgba(0, 180, 166, 0.08), rgba(0, 229, 208, 0.08));
                border-radius: 12px;
                border: 2px solid rgba(0, 180, 166, 0.3);
                margin-bottom: 15px;
            }

            .realtime-info h3 {
                font-size: 0.9rem;
                color: var(--primary);
                font-weight: 800;
                margin-bottom: 10px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .clock-display {
                font-size: 1.5rem;
                font-weight: 900;
                color: var(--text-primary);
                text-align: center;
                padding: 10px;
                background: rgba(0, 180, 166, 0.1);
                border-radius: 8px;
                margin-bottom: 10px;
                font-family: 'Courier New', monospace;
            }

            .weather-display {
                display: flex;
                flex-direction: column;
                gap: 8px;
            }

            .weather-item {
                display: flex;
                justify-content: space-between;
                align-items: center;
                font-size: 0.85rem;
                padding: 8px;
                background: rgba(255, 255, 255, 0.5);
                border-radius: 6px;
            }

            [data-theme="dark"] .weather-item {
                background: rgba(0, 180, 166, 0.1);
            }

            /* Download Menu */
            .download-menu {
                padding: 15px;
                background: linear-gradient(135deg, rgba(0, 180, 166, 0.08), rgba(0, 229, 208, 0.08));
                border-radius: 12px;
                border: 2px solid rgba(0, 180, 166, 0.3);
                margin-bottom: 15px;
            }

            .download-menu h3 {
                font-size: 0.9rem;
                color: var(--primary);
                font-weight: 800;
                margin-bottom: 12px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .download-btn {
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 12px 15px;
                margin-bottom: 8px;
                background: linear-gradient(135deg, var(--primary), var(--secondary));
                color: white;
                border: none;
                border-radius: 10px;
                cursor: pointer;
                transition: all 0.3s ease;
                font-weight: 700;
                font-size: 0.9rem;
                text-decoration: none;
                justify-content: center;
            }

            .download-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0, 180, 166, 0.4);
            }

            /* Lanjutkan di bagian 2... */
            /* ==================== BASEMAP CONTROL (HORIZONTAL DI BAWAH) ==================== */
            .basemap-control {
                position: absolute;
                bottom: 20px;
                left: 50%;
                transform: translateX(-50%);
                z-index: 1000;
                background: white;
                padding: 15px 20px;
                border-radius: 15px;
                box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
                border: 2px solid rgba(0, 180, 166, 0.3);
                max-width: 90%;
                animation: slideInFromBottom 0.5s ease;
            }

            [data-theme="dark"] .basemap-control {
                background: rgba(10, 17, 40, 0.95);
                border-color: rgba(0, 229, 208, 0.5);
            }

            .basemap-control h4 {
                font-size: 0.85rem;
                font-weight: 800;
                color: var(--text-primary);
                margin-bottom: 12px;
                text-align: center;
                border-bottom: 2px solid var(--primary);
                padding-bottom: 8px;
            }

            .basemap-content {
                display: flex;
                align-items: center;
                gap: 15px;
            }

            .basemap-thumbnails {
                display: flex;
                gap: 10px;
