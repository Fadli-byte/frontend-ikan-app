      animation: textPulse 2s ease-in-out infinite;
    }

    @keyframes textPulse {
      0%, 100% { filter: brightness(1); }
      50% { filter: brightness(1.3); }
    }

    .welcome-subtitle {
      font-size: 1.3em;
      color: rgba(255, 255, 255, 0.7);
      margin-bottom: 20px;
      text-transform: uppercase;
      letter-spacing: 3px;
