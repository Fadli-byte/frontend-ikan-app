        clearChatBtn.addEventListener('click', () => {
            if (confirm('Apakah Anda yakin ingin menghapus semua riwayat chat?')) {
                const messages = chatMessages.querySelectorAll('.message');
                messages.forEach(msg => msg.remove());

                const infoPanel = document.querySelector('.info-panel');
                if (infoPanel) {
                    chatMessages.appendChild(infoPanel);
                }

                addMessage('Halo! Saya <strong>BADU AI</strong>, asisten virtual ekosistem laut Pulau Tunda. üåä<br><br>Saya dapat membantu Anda dengan:<br>‚Ä¢ Informasi tentang <strong>Mangrove, Lamun, Terumbu Karang, dan Ikan</strong><br>‚Ä¢ Analisis data dan file penelitian<br>‚Ä¢ Prediksi kondisi ekosistem<br>‚Ä¢ Panduan penelitian lapangan<br><br>Silakan pilih topik di atas atau tanyakan langsung! üòä', 'bot');

                showNotification('‚úì Chat berhasil dihapus!');
            }
        });

        // Download Chat
        downloadChatBtn.addEventListener('click', () => {
            let chatText = '='.repeat(60) + '\n';
            chatText += 'RIWAYAT CHAT BADU AI\n';
            chatText += 'Portal Ekosistem Laut - Pulau Tunda, Banten\n';
            chatText += '='.repeat(60) + '\n';
            chatText += `Tanggal: ${new Date().toLocaleString('id-ID', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            })}\n`;
            chatText += '='.repeat(60) + '\n\n';

            const messages = chatMessages.querySelectorAll('.message');
            messages.forEach((msg, index) => {
                const isUser = msg.classList.contains('user');
                const content = msg.querySelector('.message-content').textContent.trim();
                const sender = isUser ? 'ANDA' : 'BADU AI';

                chatText += `[${index + 1}] ${sender}:\n`;
                chatText += `${content}\n`;
                chatText += '-'.repeat(60) + '\n\n';
            });

            chatText += '='.repeat(60) + '\n';
            chatText += 'Terima kasih telah menggunakan BADU AI\n';
            chatText += '='.repeat(60) + '\n';

            const blob = new Blob([chatText], { type: 'text/plain;charset=utf-8' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `BADU-AI-Chat-${new Date().toISOString().split('T')[0]}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);

            showNotification('‚úì Chat berhasil diunduh!');
        });

        // Info Button
        infoBtn.addEventListener('click', () => {
            const infoMessage = `
                <strong>üìä BADU AI - Informasi Sistem</strong><br><br>
                <strong>Kemampuan:</strong><br>
