<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register - Badu Platform</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: #0a0e27;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow-x: hidden;
      position: relative;
    }

    /* Gradient Background */
    .background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: radial-gradient(ellipse at top, rgba(16, 185, 129, 0.15), transparent 70%),
                  radial-gradient(ellipse at bottom, rgba(59, 130, 246, 0.1), transparent 70%);
      z-index: 1;
    }

    .grid-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: 
        linear-gradient(rgba(16, 185, 129, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(16, 185, 129, 0.03) 1px, transparent 1px);
      background-size: 60px 60px;
      z-index: 2;
    }

    /* Main Container */
    .container {
      position: relative;
      z-index: 10;
      width: 100%;
      max-width: 1400px;
      padding: 40px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 80px;
      align-items: center;
    }

    /* Left Side - Branding & Mascot */
    .brand-section {
      display: flex;
      flex-direction: column;
      gap: 40px;
    }

    .brand-header {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .brand-logo {
      width: 70px;
      height: 70px;
      background: linear-gradient(135deg, #10b981, #059669);
      border-radius: 18px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 36px;
      font-weight: 900;
      color: white;
      box-shadow: 0 10px 40px rgba(16, 185, 129, 0.4);
    }

    .brand-info h1 {
      font-size: 32px;
      font-weight: 800;
      color: white;
      letter-spacing: -0.5px;
    }

    .brand-info p {
      font-size: 15px;
      color: rgba(255, 255, 255, 0.6);
      margin-top: 4px;
    }

    /* Mascot Container - Professional & Clean */
    .mascot-container {
      position: relative;
      width: 100%;
      aspect-ratio: 1;
      max-width: 500px;
      margin: 0 auto;
    }

    .mascot-wrapper {
      position: relative;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Decorative Elements */
    .mascot-circle {
      position: absolute;
      width: 420px;
      height: 420px;
      border-radius: 50%;
      background: radial-gradient(circle at 30% 30%, rgba(16, 185, 129, 0.15), transparent 70%);
      border: 2px solid rgba(16, 185, 129, 0.2);
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      animation: pulseCircle 4s ease-in-out infinite;
    }

    @keyframes pulseCircle {
      0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; }
      50% { transform: translate(-50%, -50%) scale(1.05); opacity: 0.8; }
    }

    .mascot-circle-outer {
      position: absolute;
      width: 520px;
      height: 520px;
      border-radius: 50%;
      border: 1px solid rgba(16, 185, 129, 0.1);
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      animation: rotateCircle 20s linear infinite;
    }

    @keyframes rotateCircle {
      from { transform: translate(-50%, -50%) rotate(0deg); }
      to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    /* Professional Badu Mascot - SVG Style */
    .badu-mascot {
      position: relative;
      width: 300px;
      height: 300px;
      z-index: 5;
    }

    /* Simple, Clean Rhino Design */
    .rhino-main {
      position: absolute;
      width: 180px;
      height: 200px;
      background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
      border-radius: 90px 90px 70px 70px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    }

    /* Vest - Clean & Minimal */
    .rhino-vest-clean {
      position: absolute;
      width: 140px;
      height: 130px;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      border-radius: 70px 70px 50px 50px;
      top: 35px;
      left: 20px;
      box-shadow: 
        inset 0 2px 10px rgba(255, 255, 255, 0.2),
        0 10px 30px rgba(16, 185, 129, 0.5);
    }

    .vest-badge {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 42px;
      font-weight: 900;
      color: white;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
      letter-spacing: 2px;
    }

    /* Minimal Head */
    .rhino-head-clean {
      position: absolute;
      width: 120px;
      height: 110px;
      background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
      border-radius: 60px 60px 50px 50px;
      top: 20px;
      left: 90px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    /* Simple Horn */
    .horn-simple {
      position: absolute;
      width: 20px;
      height: 50px;
      background: linear-gradient(180deg, #9ca3af, #6b7280);
      border-radius: 10px 10px 5px 5px;
      top: 50px;
      left: 50px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    /* Minimal Eyes - Modern */
    .eyes-minimal {
      position: absolute;
      width: 70px;
      top: 40px;
      left: 25px;
      display: flex;
      gap: 25px;
    }

    .eye-minimal {
      width: 22px;
      height: 22px;
      background: white;
      border-radius: 50%;
      position: relative;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .pupil-minimal {
      position: absolute;
      width: 12px;
      height: 12px;
      background: #1f2937;
      border-radius: 50%;
      top: 5px;
      left: 5px;
      transition: all 0.3s ease;
    }

    .pupil-minimal::after {
      content: '';
      position: absolute;
      width: 4px;
      height: 4px;
      background: white;
      border-radius: 50%;
      top: 2px;
      left: 2px;
    }

    /* Simple Snout */
    .snout-minimal {
      position: absolute;
      width: 60px;
      height: 35px;
      background: linear-gradient(135deg, #9ca3af, #6b7280);
      border-radius: 30px 30px 25px 25px;
      bottom: 20px;
      left: 30px;
      box-shadow: inset 0 -3px 8px rgba(0, 0, 0, 0.2);
    }

    .nostril-minimal {
      position: absolute;
      width: 8px;
      height: 10px;
      background: #374151;
      border-radius: 50%;
      bottom: 10px;
    }

    .nostril-minimal:first-child { left: 15px; }
    .nostril-minimal:last-child { right: 15px; }

    /* Floating Animation */
    .badu-mascot {
      animation: floatMascot 3s ease-in-out infinite;
    }

    @keyframes floatMascot {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-15px); }
    }

    /* Features List */
    .features-list {
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin-top: 40px;
    }

    .feature-item {
      display: flex;
      align-items: center;
      gap: 15px;
      color: rgba(255, 255, 255, 0.8);
      font-size: 15px;
    }

    .feature-icon {
      width: 40px;
      height: 40px;
      background: rgba(16, 185, 129, 0.1);
      border: 1px solid rgba(16, 185, 129, 0.3);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #10b981;
      font-size: 18px;
    }

    /* Right Side - Register Form */
    .form-section {
      position: relative;
    }

    .register-card {
      background: rgba(15, 23, 42, 0.8);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 24px;
      padding: 50px 45px;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
    }

    .form-header {
      margin-bottom: 35px;
    }

    .form-header h2 {
      font-size: 28px;
      font-weight: 700;
      color: white;
      margin-bottom: 8px;
      letter-spacing: -0.5px;
    }

    .form-header p {
      font-size: 15px;
      color: rgba(255, 255, 255, 0.6);
      line-height: 1.6;
    }

    .error-message {
      background: rgba(239, 68, 68, 0.1);
      border: 1px solid rgba(239, 68, 68, 0.3);
      border-radius: 12px;
      padding: 15px 18px;
      margin-bottom: 25px;
      color: #fca5a5;
      font-size: 14px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .input-group {
      margin-bottom: 24px;
    }

    .input-label {
      display: block;
      font-size: 14px;
      font-weight: 600;
      color: rgba(255, 255, 255, 0.9);
      margin-bottom: 10px;
      letter-spacing: -0.2px;
    }

    .input-wrapper {
      position: relative;
    }

    .input-icon {
      position: absolute;
      left: 18px;
      top: 50%;
      transform: translateY(-50%);
      color: rgba(255, 255, 255, 0.4);
      font-size: 18px;
      transition: color 0.3s ease;
    }

    .register-card input {
      width: 100%;
      padding: 16px 18px 16px 52px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      font-size: 15px;
      color: white;
      font-family: 'Inter', sans-serif;
      transition: all 0.3s ease;
    }

    .register-card input::placeholder {
      color: rgba(255, 255, 255, 0.3);
    }

    .register-card input:focus {
      outline: none;
      background: rgba(255, 255, 255, 0.08);
      border-color: #10b981;
      box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
    }

    .register-card input:focus ~ .input-icon {
      color: #10b981;
    }

    .password-toggle {
      position: absolute;
      right: 18px;
      top: 50%;
      transform: translateY(-50%);
      color: rgba(255, 255, 255, 0.4);
      cursor: pointer;
      font-size: 18px;
      transition: color 0.3s ease;
    }

    .password-toggle:hover {
      color: #10b981;
    }

    .password-strength {
      margin-top: 8px;
      display: none;
    }

    .strength-bar {
      height: 4px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 2px;
      overflow: hidden;
      margin-bottom: 6px;
    }

    .strength-fill {
      height: 100%;
      width: 0%;
      background: #10b981;
      transition: all 0.3s ease;
    }

    .strength-text {
      font-size: 12px;
      color: rgba(255, 255, 255, 0.5);
    }

    .register-btn {
      width: 100%;
      padding: 16px;
      background: linear-gradient(135deg, #10b981, #059669);
      border: none;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 600;
      color: white;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 10px;
      box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
    }

    .register-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 15px 35px rgba(16, 185, 129, 0.4);
    }

    .register-btn:active {
      transform: translateY(0);
    }

    .register-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .divider {
      display: flex;
      align-items: center;
      gap: 15px;
      margin: 30px 0;
      color: rgba(255, 255, 255, 0.3);
      font-size: 13px;
    }

    .divider::before,
    .divider::after {
      content: '';
      flex: 1;
      height: 1px;
      background: rgba(255, 255, 255, 0.1);
    }

    .social-login {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      margin-bottom: 30px;
    }

    .social-btn {
      padding: 12px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      color: rgba(255, 255, 255, 0.8);
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .social-btn:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.2);
    }

    .login-link {
      text-align: center;
      color: rgba(255, 255, 255, 0.6);
      font-size: 14px;
    }

    .login-link a {
      color: #10b981;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    .login-link a:hover {
      color: #059669;
    }

    /* Loading State */
    .loading .register-btn {
      position: relative;
      pointer-events: none;
    }

    .loading .register-btn::after {
      content: '';
      position: absolute;
      width: 18px;
      height: 18px;
      border: 2px solid white;
      border-top-color: transparent;
      border-radius: 50%;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      animation: spin 0.6s linear infinite;
    }

    @keyframes spin {
      to { transform: translateY(-50%) rotate(360deg); }
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .container {
        grid-template-columns: 1fr;
        gap: 50px;
      }

      .brand-section {
        text-align: center;
      }

      .brand-header {
        justify-content: center;
      }

      .mascot-container {
        max-width: 350px;
      }

      .features-list {
        max-width: 400px;
        margin: 30px auto 0;
      }
    }

    @media (max-width: 768px) {
      .container {
        padding: 30px 20px;
      }

      .register-card {
        padding: 35px 28px;
      }

      .brand-info h1 {
        font-size: 26px;
      }

      .form-header h2 {
        font-size: 24px;
      }

      .social-login {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="background"></div>
  <div class="grid-overlay"></div>

  <div class="container">
    <!-- Left Side - Branding & Mascot -->
    <div class="brand-section">
      <div class="brand-header">
        <div class="brand-logo">B</div>
        <div class="brand-info">
          <h1>Badu Platform</h1>
          <p>Your Digital Companion</p>
        </div>
      </div>

      <div class="mascot-container">
        <div class="mascot-wrapper">
          <div class="mascot-circle-outer"></div>
          <div class="mascot-circle"></div>
          
          <!-- Professional Badu Mascot -->
          <div class="badu-mascot" id="baduMascot">
            <div class="rhino-main">
              <div class="rhino-vest-clean">
                <div class="vest-badge">BADU</div>
              </div>
            </div>
            
            <div class="rhino-head-clean">
              <div class="horn-simple"></div>
              <div class="eyes-minimal">
                <div class="eye-minimal">
                  <div class="pupil-minimal" id="leftPupil"></div>
                </div>
                <div class="eye-minimal">
                  <div class="pupil-minimal" id="rightPupil"></div>
                </div>
              </div>
              <div class="snout-minimal">
                <div class="nostril-minimal"></div>
                <div class="nostril-minimal"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="features-list">
        <div class="feature-item">
          <div class="feature-icon">
            <i class="fas fa-shield-alt"></i>
          </div>
          <span>Keamanan tingkat enterprise</span>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <i class="fas fa-bolt"></i>
          </div>
          <span>Proses registrasi super cepat</span>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <i class="fas fa-check-circle"></i>
          </div>
          <span>Verifikasi otomatis & aman</span>
        </div>
      </div>
    </div>

    <!-- Right Side - Register Form -->
    <div class="form-section">
      <div class="register-card">
        <div class="form-header">
          <h2>Buat Akun Baru</h2>
          <p>Mulai perjalanan digital Anda bersama Badu</p>
        </div>

        <% if (error) { %>
          <div class="error-message">
            <i class="fas fa-exclamation-circle"></i>
            <span><%= error %></span>
          </div>
        <% } %>

        <form action="/register" method="POST" id="registerForm">
          <div class="input-group">
            <label class="input-label">Username</label>
            <div class="input-wrapper">
              <i class="fas fa-user input-icon"></i>
              <input 
                type="text" 
                name="username" 
                id="username"
                placeholder="Pilih username unik" 
                required 
                autocomplete="off">
            </div>
          </div>

          <div class="input-group">
            <label class="input-label">Password</label>
            <div class="input-wrapper">
              <i class="fas fa-lock input-icon"></i>
              <input 
                type="password" 
                name="password" 
                id="password"
                placeholder="Minimal 6 karakter" 
                required>
              <i class="fas fa-eye password-toggle" id="passwordToggle"></i>
            </div>
            <div class="password-strength" id="passwordStrength">
              <div class="strength-bar">
                <div class="strength-fill" id="strengthFill"></div>
              </div>
              <div class="strength-text" id="strengthText"></div>
            </div>
          </div>

          <button type="submit" class="register-btn">
            Daftar Sekarang
          </button>
        </form>

        <div class="divider">atau daftar dengan</div>

        <div class="social-login">
          <button class="social-btn">
            <i class="fab fa-google"></i>
            Google
          </button>
          <button class="social-btn">
            <i class="fab fa-github"></i>
            GitHub
          </button>
        </div>

        <div class="login-link">
          Sudah punya akun? <a href="/login">Login di sini</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Eye tracking - subtle and professional
    document.addEventListener('mousemove', (e) => {
      const pupils = document.querySelectorAll('.pupil-minimal');
      const formSection = document.querySelector('.form-section');
      const formRect = formSection.getBoundingClientRect();
      
      pupils.forEach(pupil => {
        const rect = pupil.parentElement.getBoundingClientRect();
        const pupilX = rect.left + rect.width / 2;
        const pupilY = rect.top + rect.height / 2;
        
        // Look at form when mouse is over it
        let targetX, targetY;
        if (e.clientX > formRect.left && e.clientX < formRect.right &&
            e.clientY > formRect.top && e.clientY < formRect.bottom) {
          targetX = formRect.left + formRect.width / 2;
          targetY = formRect.top + formRect.height / 2;
        } else {
          targetX = e.clientX;
          targetY = e.clientY;
        }
        
        const deltaX = targetX - pupilX;
        const deltaY = targetY - pupilY;
        const angle = Math.atan2(deltaY, deltaX);
        const distance = Math.min(4, Math.sqrt(deltaX**2 + deltaY**2) / 50);
        
        const moveX = Math.cos(angle) * distance;
        const moveY = Math.sin(angle) * distance;
        
        gsap.to(pupil, {
          x: moveX,
          y: moveY,
          duration: 0.3,
          ease: "power2.out"
        });
      });
    });

    // Password toggle
    document.getElementById('passwordToggle').addEventListener('click', function() {
      const password = document.getElementById('password');
      const icon = this;
      
      if (password.type === 'password') {
        password.type = 'text';
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
      } else {
        password.type = 'password';
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
      }
    });

    // Password strength indicator
    const passwordInput = document.getElementById('password');
    const strengthIndicator = document.getElementById('passwordStrength');
    const strengthFill = document.getElementById('strengthFill');
    const strengthText = document.getElementById('strengthText');

    passwordInput.addEventListener('input', function() {
      const password = this.value;
      
      if (password.length === 0) {
        strengthIndicator.style.display = 'none';
        return;
      }
      
      strengthIndicator.style.display = 'block';
      
      let strength = 0;
      if (password.length >= 6) strength += 25;
      if (password.length >= 8) strength += 25;
      if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength += 25;
      if (/\d/.test(password)) strength += 25;
      
      strengthFill.style.width = strength + '%';
      
      if (strength <= 25) {
        strengthFill.style.background = '#ef4444';
        strengthText.textContent = 'Lemah';
      } else if (strength <= 50) {
        strengthFill.style.background = '#f59e0b';
        strengthText.textContent = 'Sedang';
      } else if (strength <= 75) {
        strengthFill.style.background = '#10b981';
        strengthText.textContent = 'Kuat';
      } else {
        strengthFill.style.background = '#10b981';
        strengthText.textContent = 'Sangat Kuat';
      }
    });

    // Form validation
    document.getElementById('registerForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const username = document.getElementById('username').value.trim();
      const password = document.getElementById('password').value;
      
      // Remove existing errors
      const existingError = document.querySelector('.error-message');
      if (existingError) existingError.remove();
      
      if (username.length < 3) {
        showError('Username minimal 3 karakter');
        return;
      }
      
      if (password.length < 6) {
        showError('Password minimal 6 karakter');
        return;
      }
      
      // Show loading state
      const card = document.querySelector('.register-card');
      card.classList.add('loading');
      
      // Badu celebrates
      gsap.to('.badu-mascot', {
        y: -20,
        duration: 0.3,
        repeat: 3,
        yoyo: true,
        ease: "power2.inOut"
      });
      
      // Submit after animation
      setTimeout(() => {
        this.submit();
      }, 1500);
    });

    function showError(message) {
      const form = document.querySelector('form');
      const errorDiv = document.createElement('div');
      errorDiv.className = 'error-message';
      errorDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i><span>${message}</span>`;
      form.insertBefore(errorDiv, form.firstChild);
      
      gsap.from(errorDiv, {
        x: -20,
        opacity: 0,
        duration: 0.3
      });
    }

    // Input focus animations
    const inputs = document.querySelectorAll('input');
    inputs.forEach(input => {
      input.addEventListener('focus', function() {
        gsap.to(this, {
          scale: 1.01,
          duration: 0.2
        });
      });
      
      input.addEventListener('blur', function() {
        gsap.to(this, {
          scale: 1,
          duration: 0.2
        });
      });
    });

    // Page load animation
    window.addEventListener('load', () => {
      const tl = gsap.timeline();
      
      tl.from('.brand-header', {
        y: -30,
        opacity: 0,
        duration: 0.6,
        ease: "power3.out"
      });
      
      tl.from('.mascot-container', {
        scale: 0.8,
        opacity: 0,
        duration: 0.8,
        ease: "back.out(1.5)"
      }, "-=0.3");
      
      tl.from('.features-list .feature-item', {
        x: -30,
        opacity: 0,
        duration: 0.4,
        stagger: 0.1,
        ease: "power2.out"
      }, "-=0.4");
      
      tl.from('.register-card', {
        x: 50,
        opacity: 0,
        duration: 0.8,
        ease: "power3.out"
      }, "-=0.6");
    });
  </script>
</body>
</html>
